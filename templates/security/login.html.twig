{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div style="display: flex; justify-content: center; align-items: center; min-height: 80vh; background-color: var(--color-background);">
		<div style="background-color: white; padding: 3rem; border-radius: 1rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); max-width: 500px; width: 100%;">
			<h1 style="color: var(--color-primary); font-family: var(--font-family-display); font-size: 2rem; font-weight: 700; text-align: center; margin-bottom: 2rem;">Sign In</h1>

			{% if error %}
				<div style="background-color: #fee; border: 1px solid #fcc; border-radius: 0.5rem; padding: 1rem; margin-bottom: 1.5rem; color: #c33;">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div style="background-color: #e7f5ff; border: 1px solid #91caff; border-radius: 0.5rem; padding: 1rem; margin-bottom: 1.5rem; color: #0958d9;">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}" style="color: var(--color-primary); font-weight: 600; text-decoration: underline;">Logout</a>
				</div>
			{% endif %}

			<form method="post" class="fs-form" style="width: 100%; padding: 0;">
				<div class="fs-field">
					<label for="inputUsername" class="fs-label">Username</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="fs-input" placeholder="Enter your username" autocomplete="username" required autofocus>
				</div>

				<div class="fs-field">
					<label for="inputPassword" class="fs-label">Password</label>
					<input type="password" name="password" id="inputPassword" class="fs-input" placeholder="Enter your password" autocomplete="current-password" required>
				</div>

				<div class="fs-checkbox-field" style="margin-top: 1rem;">
					<div class="fs-checkbox-wrapper">
						<input type="checkbox" name="_remember_me" id="rememberMe" class="fs-checkbox">
					</div>
					<div style="flex: 1;">
						<label for="rememberMe" class="fs-label">Remember me</label>
					</div>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="fs-button-group" style="margin-top: 2rem;">
					<button class="fs-button" type="submit" style="width: 100%;">
						Sign in
					</button>
				</div>
			</form>

			<p style="text-align: center; margin-top: 1.5rem; color: var(--color-text-muted);">
				Don't have an account?
				<a href="/register" style="color: var(--color-primary); font-weight: 600; text-decoration: none;">Register</a>
			</p>
		</div>
	</div>
{% endblock %}