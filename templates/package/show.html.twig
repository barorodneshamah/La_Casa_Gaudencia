<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
:root {
    --brand-primary: #c24a16;
    --brand-cream: #fcfbf7;
    --brand-black: #000000;
    --brand-text: #2f2f2f;
    --brand-text-muted: #888888;
    --font-heading: 'Playfair Display', serif;
    --font-body: 'Roboto', sans-serif;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: #f7f5edff;
    font-family: 'Roboto', sans-serif;
    color: #2f2f2f;
}

/* ===== ACCENT BAR ===== */
.sidebar-accent {
    position: fixed;
    top: 0;
    left: 0;
    width: 8px;
    height: 100vh;
    background-color: #c24a16;
    border-radius: 0 6px 6px 0;
    box-shadow: 2px 0 8px rgba(0,0,0,0.15);
    z-index: 30;
}

/* ===== SIDEBAR ===== */
.sidebar {
    position: fixed;
    top: 0;
    left: 8px;
    width: 260px;
    height: 100vh;
    background: white;
    box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 28px;
    border-radius: 0 12px 12px 0;
    z-index: 20;
}

/* ===== BRAND ===== */
.brand {
    text-align: center;
    margin-bottom: 30px;
}

.brand img {
    width: 75px;
    height: 75px;
    margin-bottom: 8px;
    filter: drop-shadow(0 3px 6px rgba(0,0,0,0.15));
}

.brand h1 {
    font-family: 'Playfair Display', serif;
    color: #c24a16;
    font-size: 22px;
    letter-spacing: .5px;
    margin: 0;
    font-weight: 600;
}

.brand small {
    color: #777;
    font-size: 12px;
    letter-spacing: .75px;
    font-weight: 500;
}

/* ===== SEPARATOR ===== */
.sidebar-separator {
    width: 75%;
    height: 1.5px;
    background: linear-gradient(to right, transparent, #d1d1d1, transparent);
    margin: 10px 0 15px 0;
}

/* ===== MENU ===== */
.sidebar ul {
    list-style: none;
    width: 100%;
    padding: 0;
}

.sidebar ul li a {
    display: flex;
    gap: 14px;
    align-items: center;
    padding: 14px 35px;
    font-size: 15px;
    font-weight: 500;
    color: #2f2f2f;
    text-decoration: none;
    transition: all .25s ease;
}

.sidebar ul li svg {
    width: 20px;
    height: 20px;
    fill: #888;
    transition: .25s;
}

.sidebar ul li a:hover,
.sidebar ul li.active a {
    background-color: #c24a16;
    color: white;
    margin-left: -12px;
    border-radius: 0 30px 30px 0;
    padding-left: 48px;
    box-shadow: 0 4px 12px rgba(194,74,22,0.25);
}

.sidebar ul li a:hover svg,
.sidebar ul li.active a svg {
    fill: white !important;
}

/* ===== LOGOUT SECTION ===== */
.sidebar-logout {
    width: 100%;
    padding: 20px 30px;
    margin-top: auto;
    display: flex;
    justify-content: center;
    border-top: 1px solid #eee;
}

.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 80%;
    padding: 14px 24px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(194, 74, 22, 0.3);
    border: none;
    cursor: pointer;
}

.logout-btn:hover {
    background: linear-gradient(135deg, #a53f13 0%, #c24a16 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(194, 74, 22, 0.4);
}

.logout-btn i {
    font-size: 16px;
}

/* ===== TOPBAR ===== */
.topbar {
    margin-left: 268px;
    background: #c24a16;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 35px;
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 3px 10px rgba(0,0,0,0.15);
}

.topbar-left {
    font-family: 'Playfair Display', serif;
    font-size: 24px;
    font-weight: 600;
    letter-spacing: .7px;
}

.topbar-right {
    display: flex;
    align-items: center;
}

.datetime-display {
    text-align: right;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8px;
}

.datetime-display .time {
    font-size: 14px;
    font-weight: 600;
    color: #ffffff;
}

.datetime-display .date {
    font-size: 10px;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 1px;
}

/* ===== MAIN CONTENT (layout) ===== */
.main-content { margin-left: 268px; padding: 32px; min-height: calc(100vh - 70px); }

/* Page header */
.page-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 28px; gap: 16px; flex-wrap: wrap; }
.page-header .section-title { margin: 0; font-family: var(--font-heading); font-size: 26px; color: var(--brand-primary); font-weight: 600; display: flex; gap: 12px; align-items: center; }
.section-title i { font-size: 22px; opacity: .9; }

/* Section Headings */
.section-heading {
    font-family: var(--font-heading);
    font-size: 20px;
    color: #c24a16;
    font-weight: 700;
    margin: 30px 0 18px 0;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(194, 74, 22, 0.2);
    display: flex;
    align-items: center;
    gap: 10px;
}

.section-heading i {
    color: #c24a16;
    font-size: 22px;
}

/* Header actions */
.header-buttons { display: flex; gap: 10px; flex-wrap: wrap; }
.btn-hollow, .btn-solid {
    display: inline-flex; align-items: center; gap: 8px;
    padding: 10px 16px; border-radius: 10px; font-size: 14px;
    text-decoration: none; cursor: pointer; transition: .25s ease;
    border: 2px solid transparent;
}
.btn-hollow { color: #c24a16; border-color: #c24a16; background: #fff; }
.btn-hollow:hover { background: #c24a16; color: #fff; }
.btn-solid { background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%); color: #fff; box-shadow: 0 6px 16px rgba(194,74,22,.25); }
.btn-solid:hover { transform: translateY(-2px); }

.header-buttons form button {
    display: inline-flex; align-items: center; gap: 8px;
    padding: 10px 16px; border-radius: 10px; font-size: 14px;
    border: 0; cursor: pointer; color: #fff;
    background: linear-gradient(135deg, #c62828 0%, #ef5350 100%);
    box-shadow: 0 6px 16px rgba(198,40,40,.25);
}
.header-buttons form button:hover { transform: translateY(-2px); }

/* Card wrapper */
.package-card { background: #fff; border-radius: 16px; box-shadow: 0 8px 24px rgba(0,0,0,.08); border: 1px solid rgba(0,0,0,.05); overflow: hidden; }

/* Top summary strip */
.package-hero { display: flex; justify-content: space-between; gap: 18px; padding: 20px 22px; background: linear-gradient(135deg, #faf8f4 0%, #fff 100%); border-bottom: 1px solid #eee; flex-wrap: wrap; }
.package-id { display: flex; align-items: center; gap: 14px; }
.package-icon { width: 56px; height: 56px; border-radius: 14px; background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%); color: #fff; display: flex; align-items: center; justify-content: center; font-size: 22px; box-shadow: 0 6px 16px rgba(194,74,22,.3); }
.package-meta h3 { margin: 0; font-size: 20px; color: #2f2f2f; font-weight: 800; }

/* Badges */
.badges { display: flex; gap: 10px; margin-top: 8px; flex-wrap: wrap; }
.type-badge { background: #f3e5f5; color: #7b1fa2; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px; }
.type-badge.standard { background: #e3f2fd; color: #1565c0; }
.type-badge.premium { background: #fff3e0; color: #ef6c00; }
.type-badge.luxury { background: linear-gradient(135deg, #ffd700 0%, #ffed4a 100%); color: #5d4e00; }
.type-badge.romantic { background: #fce4ec; color: #c2185b; }
.type-badge.family { background: #e8f5e9; color: #2e7d32; }
.type-badge.adventure { background: #e0f7fa; color: #00838f; }
.status-badge { padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 700; text-transform: uppercase; letter-spacing: .5px; display: inline-flex; align-items: center; gap: 6px; border: 1px solid transparent; }
.status-badge.active { background: #e8f5e9; color: #2e7d32; border-color: #a5d6a7; }
.status-badge.inactive { background: #ffebee; color: #c62828; border-color: #ef9a9a; }
.status-badge.expired { background: #fafafa; color: #757575; border-color: #e0e0e0; }
.status-badge.draft { background: #fff3e0; color: #ef6c00; border-color: #ffcc80; }
.featured-badge { background: linear-gradient(135deg, #ffd700 0%, #ffed4a 100%); color: #5d4e00; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 700; display: inline-flex; align-items: center; gap: 6px; }

/* Quick tiles */
.package-quick { display: flex; gap: 14px; flex-wrap: wrap; align-items: center; }
.quick-tile { background: #fff; border: 1px solid #eee; border-radius: 12px; padding: 10px 14px; min-width: 140px; display: flex; align-items: center; gap: 10px; box-shadow: 0 4px 12px rgba(0,0,0,.04); }
.quick-tile i { color: #c24a16; font-size: 18px; }
.quick-label { font-size: 11px; color: #888; text-transform: uppercase; letter-spacing: .5px; }
.quick-value { font-size: 16px; font-weight: 800; color: #2f2f2f; }

/* Content body */
.package-body { padding: 22px; }

/* GALLERY */
.package-gallery { margin-bottom: 22px; }
.gallery-main { position: relative; height: 380px; border-radius: 16px; overflow: hidden; background: #f3f3f3; box-shadow: 0 8px 24px rgba(0,0,0,.06); }
.gallery-main img { width: 100%; height: 100%; object-fit: cover; display: block; }
.gallery-nav { position: absolute; top: 50%; transform: translateY(-50%); width: 40px; height: 40px; border: 0; border-radius: 50%; background: #fff; color: #c24a16; box-shadow: 0 6px 16px rgba(0,0,0,.15); cursor: pointer; display: inline-flex; align-items: center; justify-content: center; transition: all 0.3s ease; }
.gallery-nav:hover { background: #c24a16; color: #fff; }
.gallery-nav.prev { left: 12px; }
.gallery-nav.next { right: 12px; }
.gallery-thumbs { display: flex; gap: 10px; margin-top: 10px; overflow-x: auto; padding-bottom: 6px; }
.gallery-thumb { width: 80px; height: 58px; border-radius: 10px; overflow: hidden; border: 2px solid transparent; background: #fff; box-shadow: 0 2px 8px rgba(0,0,0,.06); padding: 0; cursor: pointer; transition: all 0.3s ease; }
.gallery-thumb img { width: 100%; height: 100%; object-fit: cover; display: block; }
.gallery-thumb.active { border-color: #c24a16; box-shadow: 0 4px 12px rgba(194,74,22,.25); }

/* Inclusions/Exclusions chips */
.items-wrap { display: flex; flex-wrap: wrap; gap: 8px; margin-bottom: 18px; }
.item-chip { display: inline-flex; align-items: center; gap: 6px; padding: 8px 14px; background: #f7f7f7; border: 1px solid #eee; color: #555; font-size: 13px; border-radius: 18px; transition: .2s ease; }
.item-chip i { font-size: 12px; }
.item-chip.inclusion i { color: #2e7d32; }
.item-chip.exclusion i { color: #c62828; }
.item-chip:hover { background: #c24a16; color: #fff; border-color: #c24a16; }
.item-chip:hover i { color: #fff; }

/* Details grid */
.details-grid { display: grid; grid-template-columns: repeat(2, minmax(260px, 1fr)); gap: 14px; }
.detail-item { background: #fff; border: 1px solid #eee; border-radius: 12px; padding: 14px 16px; display: flex; justify-content: space-between; align-items: center; }
.detail-label { color: #c24a16; font-size: 12px; text-transform: uppercase; letter-spacing: .6px; font-weight: 600; display: flex; align-items: center; gap: 6px; }
.detail-value { color: #2f2f2f; font-weight: 700; }

/* Description Section */
.description-section {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 18px 20px;
    margin-top: 10px;
}

.description-text {
    color: #555;
    font-size: 14px;
    line-height: 1.7;
    margin: 0;
}

/* Included Items Sections */
.included-items {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
    margin-top: 12px;
}

.included-item {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 14px;
    transition: all 0.3s ease;
}

.included-item:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    border-color: #c24a16;
}

.included-item-icon {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.included-item-icon.room { background: linear-gradient(135deg, #1565c0 0%, #42a5f5 100%); }
.included-item-icon.tour { background: linear-gradient(135deg, #2e7d32 0%, #66bb6a 100%); }
.included-item-icon.food { background: linear-gradient(135deg, #ef6c00 0%, #ffa726 100%); }

.included-item-info h4 {
    margin: 0 0 4px 0;
    font-size: 15px;
    color: #2f2f2f;
    font-weight: 700;
}

.included-item-info span {
    font-size: 12px;
    color: #888;
}

.included-item-config {
    margin-left: auto;
    text-align: right;
}

.included-item-config .config-label {
    font-size: 10px;
    color: #888;
    text-transform: uppercase;
}

.included-item-config .config-value {
    font-size: 14px;
    font-weight: 700;
    color: #c24a16;
}

/* No image placeholder */
.no-image-placeholder { 
    width: 100%; 
    height: 100%; 
    display: flex; 
    flex-direction: column;
    align-items: center; 
    justify-content: center; 
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    color: #999;
}
.no-image-placeholder i { font-size: 48px; margin-bottom: 10px; color: #c24a16; opacity: 0.5; }

/* Timestamps */
.timestamps {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    padding-top: 16px;
    border-top: 1px solid #eee;
    flex-wrap: wrap;
}

.timestamp-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #888;
}

.timestamp-item i {
    color: #c24a16;
}

/* Price highlight */
.price-highlight {
    background: linear-gradient(135deg, #fff8f5 0%, #fff 100%);
    border: 2px solid #c24a16;
    border-radius: 12px;
    padding: 16px 20px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
}

.price-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.price-original {
    font-size: 14px;
    color: #888;
    text-decoration: line-through;
}

.price-main {
    display: flex;
    align-items: baseline;
    gap: 8px;
}

.price-main .amount {
    font-size: 32px;
    font-weight: 800;
    color: #c24a16;
    font-family: var(--font-heading);
}

.price-main .period {
    font-size: 14px;
    color: #888;
}

.price-badges {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.discount-badge {
    background: #e8f5e9;
    color: #2e7d32;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 6px;
}

.savings-badge {
    background: #fff3e0;
    color: #ef6c00;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
}

/* Availability info */
.availability-info {
    background: #f5f5f5;
    border-radius: 12px;
    padding: 16px 20px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
}

.availability-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.availability-item i {
    color: #c24a16;
    font-size: 18px;
}

.availability-item .label {
    font-size: 12px;
    color: #888;
    text-transform: uppercase;
}

.availability-item .value {
    font-size: 15px;
    font-weight: 700;
    color: #2f2f2f;
}

@media (max-width: 900px) {
    .details-grid { grid-template-columns: 1fr; }
    .package-hero { flex-direction: column; align-items: flex-start; }
    .included-items { grid-template-columns: 1fr; }
}
</style>
{% endblock %}

