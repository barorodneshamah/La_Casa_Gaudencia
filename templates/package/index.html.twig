<!-- MAIN CONTENT -->
<div class="main-content">

    <!-- FLASH MESSAGES -->
    {% for label, messages in app.flashes %}
        <div class="flash-messages">
            {% for message in messages %}
                <div class="flash-message {{ label }}">
