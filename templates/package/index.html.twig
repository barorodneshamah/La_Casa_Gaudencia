                    <div class="stat-number">{{ packages|length }}</div>
                    <div class="stat-label">Total</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">{{ packages|filter(p => p.status == 'Active')|length }}</div>
                    <div class="stat-label">Active</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">{{ packages|filter(p => p.isFeatured == true)|length }}</div>
                    <div class="stat-label">Featured</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">{{ packages|filter(p => p.status != 'Active')|length }}</div>
                    <div class="stat-label">Inactive</div>
                </div>
            </div>
        </div>

        <!-- DATATABLE WRAPPER -->
        <div class="datatable-wrapper">
            {% if packages|length > 0 %}
            <table id="packageTable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Package</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Includes</th>
                        <th>Duration</th>
                        <th>Validity</th>
                        <th>Redemptions</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for package in packages %}
                    <tr>
                        <!-- PACKAGE NAME -->
                        <td>
                            <div class="package-name">
                                <div class="package-icon">
                                    {% if package.mainImage %}
                                        <img src="{{ asset('uploads/packages/' ~ package.mainImage) }}" alt="{{ package.name }}">
                                    {% else %}
                                        <i class="fas fa-gift"></i>
                                    {% endif %}
                                </div>
                                <div class="package-info">
                                    <div class="pkg-name">
                                        {{ package.name }}
                                        {% if package.isFeatured %}
                                            <span class="featured-badge">
                                                <i class="fas fa-star"></i>
                                                Featured
                                            </span>
                                        {% endif %}
                                    </div>
                                    <div class="pkg-type">{{ package.packageType ?? 'Custom' }}</div>
                                </div>
                            </div>
                        </td>

                        <!-- PACKAGE TYPE -->
                        <td>
                            {% set typeClass = 'custom' %}
                            {% if package.packageType|lower == 'weekend' %}
                                {% set typeClass = 'weekend' %}
                            {% elseif package.packageType|lower == 'honeymoon' %}
                                {% set typeClass = 'honeymoon' %}
                            {% elseif package.packageType|lower == 'family' %}
                                {% set typeClass = 'family' %}
                            {% elseif package.packageType|lower == 'adventure' %}
                                {% set typeClass = 'adventure' %}
                            {% elseif package.packageType|lower == 'business' %}
                                {% set typeClass = 'business' %}
                            {% elseif package.packageType|lower == 'holiday' %}
                                {% set typeClass = 'holiday' %}
                            {% endif %}
                            <span class="package-type-badge {{ typeClass }}">
                                <i class="fas fa-tag"></i>
                                {{ package.packageType ?? 'Custom' }}
                            </span>
                        </td>

                        <!-- PRICE -->
                        <td>
                            <div class="price-cell">
                                <span class="package-price">₱{{ package.packagePrice|number_format(2) }}</span>
                                {% if package.originalPrice and package.originalPrice > package.packagePrice %}
                                    <span class="original-price">₱{{ package.originalPrice|number_format(2) }}</span>
                                    {% if package.discountPercentage %}
                                        <span class="discount-badge">-{{ package.discountPercentage|number_format(0) }}%</span>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </td>

                        <!-- INCLUDES -->
                        <td>
                            <div class="items-cell">
                                {% if package.rooms|length > 0 %}
                                    <span class="item-count rooms">
                                        <i class="fas fa-bed"></i>
                                        {{ package.rooms|length }} Room{{ package.rooms|length > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                                {% if package.tours|length > 0 %}
                                    <span class="item-count tours">
                                        <i class="fas fa-map-marked-alt"></i>
                                        {{ package.tours|length }} Tour{{ package.tours|length > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                                {% if package.foods|length > 0 %}
                                    <span class="item-count foods">
                                        <i class="fas fa-utensils"></i>
                                        {{ package.foods|length }} Meal{{ package.foods|length > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                                {% if package.rooms|length == 0 and package.tours|length == 0 and package.foods|length == 0 %}
                                    <span class="item-count">No items</span>
                                {% endif %}
                            </div>
                        </td>

                        <!-- DURATION -->
                        <td>
                            <div class="duration-cell">
                                <i class="fas fa-clock"></i>
                                <span>
                                    {% if package.durationDays or package.durationNights %}
                                        {% if package.durationDays %}{{ package.durationDays }}D{% endif %}
                                        {% if package.durationDays and package.durationNights %}/{% endif %}
                                        {% if package.durationNights %}{{ package.durationNights }}N{% endif %}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </span>
                            </div>
                        </td>

                        <!-- VALIDITY -->
                        <td>
                            <div class="validity-cell">
                                {% set now = "now"|date("Y-m-d") %}
                                {% set isExpired = package.validUntil and package.validUntil|date("Y-m-d") < now %}
                                
                                <div class="date-range">
                                    {% if package.validFrom %}
                                        <span class="date-item">
                                            <i class="fas fa-calendar-check"></i>
                                            From: {{ package.validFrom|date('M d, Y') }}
                                        </span>
                                    {% endif %}
                                    {% if package.validUntil %}
                                        <span class="date-item {{ isExpired ? 'expired' : '' }}">
                                            <i class="fas fa-calendar-times"></i>
                                            Until: {{ package.validUntil|date('M d, Y') }}
                                        </span>
                                    {% endif %}
                                    {% if not package.validFrom and not package.validUntil %}
                                        <span class="active">No Expiry</span>
                                    {% endif %}
                                </div>
                            </div>
                        </td>

                        <!-- REDEMPTIONS -->
                        <td>
                            <div class="redemptions-cell">
                                <span class="redemption-count">{{ package.currentRedemptions }}</span>
                                <span class="redemption-max">
                                    / {{ package.maxRedemptions ?? '∞' }}
                                </span>
                                {% if package.maxRedemptions %}
                                    {% set percentage = (package.currentRedemptions / package.maxRedemptions) * 100 %}
                                    <div class="progress-bar">
                                        <div class="progress" style="width: {{ percentage > 100 ? 100 : percentage }}%"></div>
                                    </div>
                                {% endif %}
                            </div>
                        </td>

                        <!-- STATUS -->
                        <td>
                            {% set statusClass = 'active' %}
                            {% set statusIcon = 'check-circle' %}
                            {% if package.status|lower == 'inactive' %}
                                {% set statusClass = 'inactive' %}
                                {% set statusIcon = 'pause-circle' %}
                            {% elseif package.status|lower == 'expired' %}
                                {% set statusClass = 'expired' %}
                                {% set statusIcon = 'times-circle' %}
                            {% elseif package.status|lower == 'draft' %}
                                {% set statusClass = 'draft' %}
                                {% set statusIcon = 'edit' %}
                            {% endif %}
                            <span class="status-badge {{ statusClass }}">
                                <i class="fas fa-{{ statusIcon }}"></i>
                                {{ package.status }}
                            </span>
                        </td>

                        <!-- ACTIONS -->
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_package_show', {'id': package.id}) }}" 
                                   class="btn-action btn-view" 
                                   data-tooltip="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="{{ path('app_package_edit', {'id': package.id}) }}" 
                                   class="btn-action btn-edit"
                                   data-tooltip="Edit Package">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form method="post" 
                                      action="{{ path('app_package_toggle_status', {'id': package.id}) }}" 
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ package.id) }}">
                                    <button type="submit" 
                                            class="btn-action btn-toggle"
                                            data-tooltip="{{ package.status == 'Active' ? 'Deactivate' : 'Activate' }}">
                                        <i class="fas fa-{{ package.status == 'Active' ? 'pause' : 'play' }}"></i>
                                    </button>
                                </form>

                                <form method="post" 
                                      action="{{ path('app_package_toggle_featured', {'id': package.id}) }}" 
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('featured' ~ package.id) }}">
                                    <button type="submit" 
                                            class="btn-action btn-featured"
                                            data-tooltip="{{ package.isFeatured ? 'Remove Featured' : 'Set Featured' }}">
                                        <i class="fas fa-star"></i>
                                    </button>
                                </form>

                                <form method="post" 
                                      action="{{ path('app_package_duplicate', {'id': package.id}) }}" 
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ package.id) }}">
                                    <button type="submit" 
                                            class="btn-action btn-duplicate"
                                            data-tooltip="Duplicate Package">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </form>

                                <form method="post" 
                                      action="{{ path('app_package_delete', {'id': package.id}) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete the package \'{{ package.name }}\'?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ package.id) }}">
                                    <button type="submit" 
                                            class="btn-action btn-delete"
                                            data-tooltip="Delete Package">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
            <!-- EMPTY STATE -->
            <div class="empty-state">
                <i class="fas fa-box-open"></i>
                <h4>No Packages Found</h4>
                <p>Start by creating your first promotional package to bundle rooms, tours, and meals together.</p>
                <a href="{{ path('app_package_new') }}" class="btn-add" style="margin-top: 20px;">
                    <i class="fas fa-plus"></i>
                    Create First Package
                </a>
            </div>
            {% endif %}
        </div>
    </div>

</div>

{% endblock %}

