<script>
document.addEventListener('DOMContentLoaded', function() {

    // DateTime
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');
        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true });
            dateEl.textContent = now.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // Tabs
    document.querySelectorAll('.items-tab').forEach(tab => {
        tab.addEventListener('click', () => {
            const targetTab = tab.dataset.tab;
            document.querySelectorAll('.items-tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.items-tab-content').forEach(c => c.classList.remove('active'));
            tab.classList.add('active');
            document.getElementById(targetTab + 'Tab').classList.add('active');
        });
    });

    // Item Selection - Toggle Symfony Checkboxes
    document.querySelectorAll('.item-card').forEach(card => {
        const checkboxId = card.dataset.checkboxId;
        if (!checkboxId) return;
        
        const checkbox = document.getElementById(checkboxId);
        if (!checkbox) return;

        if (checkbox.checked) {
            card.classList.add('selected');
        }

        card.addEventListener('click', function(e) {
            checkbox.checked = !checkbox.checked;
            this.classList.toggle('selected', checkbox.checked);
            checkbox.dispatchEvent(new Event('change', { bubbles: true }));
            updateCounts();
            calculatePrices();
        });
    });

    function updateCounts() {
        document.getElementById('roomsCount').textContent = document.querySelectorAll('#roomsGrid .item-card.selected').length;
        document.getElementById('toursCount').textContent = document.querySelectorAll('#toursGrid .item-card.selected').length;
        document.getElementById('foodsCount').textContent = document.querySelectorAll('#foodsGrid .item-card.selected').length;
    }

    function calculatePrices() {
        let originalPrice = 0;
        document.querySelectorAll('.item-card.selected').forEach(card => {
            originalPrice += parseFloat(card.dataset.price) || 0;
        });

        const packagePriceInput = document.getElementById('packagePriceInput') || document.querySelector('[name$="[packagePrice]"]');
        const packagePrice = parseFloat(packagePriceInput?.value) || 0;
        const savings = originalPrice - packagePrice;
        const discountPercent = originalPrice > 0 ? (savings / originalPrice * 100) : 0;

        document.getElementById('originalPriceDisplay').textContent = '₱' + originalPrice.toFixed(2);
        document.getElementById('packagePriceDisplay').textContent = '₱' + packagePrice.toFixed(2);
        document.getElementById('savingsDisplay').textContent = '₱' + Math.max(0, savings).toFixed(2) + ' (' + Math.max(0, discountPercent).toFixed(1) + '%)';
        document.getElementById('finalPriceDisplay').textContent = '₱' + packagePrice.toFixed(2);
    }

    const packagePriceInput = document.getElementById('packagePriceInput') || document.querySelector('[name$="[packagePrice]"]');
    if (packagePriceInput) {
        packagePriceInput.addEventListener('input', calculatePrices);
    }

    updateCounts();
    calculatePrices();

    // Image Upload
    class ImageUploader {
        constructor(inputId, previewId, uploadAreaId, isMultiple = false) {
            this.uploadArea = document.getElementById(uploadAreaId);
            this.preview = document.getElementById(previewId);
            this.isMultiple = isMultiple;
            this.files = [];
            this.input = document.getElementById(inputId) || this.uploadArea?.querySelector('input[type="file"]');
            if (!this.uploadArea || !this.preview || !this.input) return;
            this.init();
        }

        init() {
            this.input.addEventListener('change', (e) => this.handleFiles(e.target.files));
            this.uploadArea.addEventListener('dragover', (e) => { e.preventDefault(); this.uploadArea.classList.add('dragover'); });
            this.uploadArea.addEventListener('dragleave', () => this.uploadArea.classList.remove('dragover'));
            this.uploadArea.addEventListener('drop', (e) => { e.preventDefault(); this.uploadArea.classList.remove('dragover'); this.handleFiles(e.dataTransfer.files); });
        }

        handleFiles(fileList) {
            const newFiles = Array.from(fileList).filter(file => {
                if (!file.type.startsWith('image/')) { alert(`${file.name} is not an image`); return false; }
                if (file.size > 5 * 1024 * 1024) { alert(`${file.name} is too large (max 5MB)`); return false; }
                return true;
            });
            this.files = this.isMultiple ? [...this.files, ...newFiles] : newFiles.slice(0, 1);
            this.renderPreview();
            this.updateInput();
        }

        renderPreview() {
            this.preview.innerHTML = '';
            this.files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const item = document.createElement('div');
                    item.className = 'image-preview-item';
                    item.innerHTML = `
                        <img src="${e.target.result}" alt="${file.name}">
                        ${!this.isMultiple ? '<span class="main-image-badge">Main</span>' : `<span class="gallery-badge">${index + 1}</span>`}
                        <button type="button" class="remove-btn" title="Remove"><i class="fas fa-times"></i></button>
                    `;
                    item.querySelector('.remove-btn').addEventListener('click', () => {
                        this.files.splice(index, 1);
                        this.renderPreview();
                        this.updateInput();
                    });
                    this.preview.appendChild(item);
                };
                reader.readAsDataURL(file);
            });
        }

        updateInput() {
            try {
                const dt = new DataTransfer();
                this.files.forEach(file => dt.items.add(file));
                this.input.files = dt.files;
            } catch (err) { console.warn('Could not update file input:', err); }
        }
    }

    new ImageUploader('mainImageInput', 'mainImagePreview', 'mainUploadArea', false);
    new ImageUploader('galleryImagesInput', 'galleryImagesPreview', 'galleryUploadArea', true);
});
</script>
{% endblock %}
