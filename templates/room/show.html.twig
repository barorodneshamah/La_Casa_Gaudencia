{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>RoomNumber</th>
                <td>{{ room.RoomNumber }}</td>
            </tr>
            <tr>
                <th>RoomType</th>
                <td>{{ room.RoomType }}</td>
            </tr>
            <tr>
                <th>PricePerNight</th>
                <td>{{ room.PricePerNight }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.Capacity }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <td>{{ room.Features }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ room.Status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ room.CreatedAt ? room.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ room.UpdatedAt ? room.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
