/* ===== DATATABLE WRAPPER ===== */
.datatable-wrapper {
    padding: 20px 25px;
}

/* ===== DATATABLE CUSTOM STYLES ===== */
.dataTables_wrapper .dataTables_length,
.dataTables_wrapper .dataTables_filter {
    margin-bottom: 20px;
}

.dataTables_wrapper .dataTables_length select,
.dataTables_wrapper .dataTables_filter input {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    transition: all 0.3s ease;
}

.dataTables_wrapper .dataTables_filter input {
    width: 220px;
    padding-left: 15px;
}

.dataTables_wrapper .dataTables_length select:focus,
.dataTables_wrapper .dataTables_filter input:focus {
    border-color: #c24a16;
    outline: none;
    box-shadow: 0 0 0 3px rgba(194, 74, 22, 0.1);
}

/* ===== TABLE STYLES ===== */
table.dataTable {
    width: 100% !important;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 14px;
}

table.dataTable thead th {
    background: linear-gradient(135deg, #2f2f2f 0%, #444 100%);
    color: white;
    padding: 16px 18px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.8px;
    border: none;
    position: relative;
}

table.dataTable thead th:first-child {
    border-radius: 10px 0 0 0;
}

table.dataTable thead th:last-child {
    border-radius: 0 10px 0 0;
}

table.dataTable thead th:after,
table.dataTable thead th:before {
    color: rgba(255,255,255,0.5) !important;
}

table.dataTable tbody tr {
    transition: all 0.3s ease;
}

table.dataTable tbody tr:hover {
    background: linear-gradient(135deg, #fff5f0 0%, #fff8f5 100%) !important;
    transform: scale(1.01);
    box-shadow: 0 4px 15px rgba(194, 74, 22, 0.1);
}

table.dataTable tbody td {
    padding: 16px 18px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f0f0;
    color: #444;
}

table.dataTable tbody tr:last-child td {
    border-bottom: none;
}

/* ===== ROOM NUMBER COLUMN ===== */
.room-number {
    display: flex;
    align-items: center;
    gap: 12px;
}

.room-number .room-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 14px;
    box-shadow: 0 3px 10px rgba(194, 74, 22, 0.3);
}

.room-number .room-info .room-num {
    font-weight: 600;
    color: #333;
    font-size: 15px;
}

.room-number .room-info .room-floor {
    font-size: 12px;
    color: #999;
    margin-top: 2px;
}

/* ===== ROOM TYPE BADGE ===== */
.room-type {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
}

.room-type.standard {
    background: #e3f2fd;
    color: #1565c0;
}

.room-type.deluxe {
    background: #f3e5f5;
    color: #7b1fa2;
}

.room-type.suite {
    background: #fff3e0;
    color: #ef6c00;
}

.room-type.presidential {
    background: linear-gradient(135deg, #ffd700 0%, #ffed4a 100%);
    color: #5d4e00;
}

/* ===== PRICE COLUMN ===== */
.price-cell {
    font-weight: 700;
    font-size: 16px;
    color: #2e7d32;
}

.price-cell .per-night {
    font-size: 11px;
    color: #888;
    font-weight: 400;
    display: block;
}

/* ===== CAPACITY COLUMN ===== */
.capacity-cell {
    display: flex;
    align-items: center;
    gap: 8px;
}

.capacity-cell i {
    color: #c24a16;
    font-size: 16px;
}

.capacity-cell span {
    font-weight: 500;
    color: #555;
}

/* ===== FEATURES COLUMN ===== */
.features-cell {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    max-width: 200px;
}

.feature-tag {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: #f5f5f5;
    border-radius: 15px;
    font-size: 11px;
    color: #666;
    border: 1px solid #e8e8e8;
    transition: all 0.2s ease;
}

.feature-tag:hover {
    background: #c24a16;
    color: white;
    border-color: #c24a16;
}

.feature-tag i {
    font-size: 10px;
}

/* ===== STATUS BADGES ===== */
.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-badge.available {
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    color: #2e7d32;
    border: 1px solid #a5d6a7;
}

.status-badge.occupied {
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
    color: #c62828;
    border: 1px solid #ef9a9a;
}

.status-badge.maintenance {
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
    color: #ef6c00;
    border: 1px solid #ffcc80;
}

.status-badge.reserved {
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    color: #1565c0;
    border: 1px solid #90caf9;
}

.status-badge i {
    font-size: 10px;
}

/* ===== ACTION BUTTONS ===== */
.action-buttons {
    display: flex;
    gap: 8px;
    justify-content: center;
}

.btn-action {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-decoration: none;
}

.btn-action.btn-view {
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    color: #1565c0;
}

.btn-action.btn-view:hover {
    background: #1565c0;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(21, 101, 192, 0.4);
}

.btn-action.btn-edit {
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
    color: #ef6c00;
}

.btn-action.btn-edit:hover {
    background: #ef6c00;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(239, 108, 0, 0.4);
}

.btn-action.btn-delete {
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
    color: #c62828;
}

.btn-action.btn-delete:hover {
    background: #c62828;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(198, 40, 40, 0.4);
}

/* ===== PAGINATION STYLES ===== */
.dataTables_wrapper .dataTables_paginate {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #f0f0f0;
}

.dataTables_wrapper .dataTables_paginate .paginate_button {
    padding: 8px 14px;
    margin: 0 3px;
    border-radius: 8px;
    border: 2px solid #e0e0e0 !important;
    background: white !important;
    color: #555 !important;
    font-weight: 500;
    transition: all 0.3s ease;
}

.dataTables_wrapper .dataTables_paginate .paginate_button:hover {
    background: #c24a16 !important;
    color: white !important;
    border-color: #c24a16 !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(194, 74, 22, 0.3);
}

.dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%) !important;
    color: white !important;
    border-color: #c24a16 !important;
    box-shadow: 0 4px 15px rgba(194, 74, 22, 0.4);
}

.dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* ===== INFO TEXT ===== */
.dataTables_wrapper .dataTables_info {
    color: #888;
    font-size: 13px;
    padding-top: 15px;
}

/* ===== EMPTY STATE ===== */
.empty-state {
    text-align: center;
    padding: 60px 20px;
}

.empty-state i {
    font-size: 60px;
    color: #ddd;
    margin-bottom: 20px;
}

.empty-state h4 {
    color: #888;
    font-weight: 500;
    margin-bottom: 10px;
}

.empty-state p {
    color: #aaa;
    font-size: 14px;
}

/* ===== TOOLTIP ===== */
[data-tooltip] {
    position: relative;
}

[data-tooltip]:hover::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #333;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    white-space: nowrap;
    z-index: 100;
    margin-bottom: 8px;
}

[data-tooltip]:hover::before {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: #333;
    z-index: 100;
}
</style>
