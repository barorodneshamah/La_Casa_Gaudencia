/* ===== TABLE CARD CONTAINER ===== */
.table-container {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

/* ===== TABLE HEADER INFO ===== */
.table-header-info {
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    padding: 20px 25px;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.table-header-info .info-left {
    display: flex;
    align-items: center;
    gap: 15px;
}

.table-header-info .info-icon {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
    box-shadow: 0 4px 12px rgba(194, 74, 22, 0.3);
}

.table-header-info .info-text h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #333;
}

.table-header-info .info-text p {
    margin: 4px 0 0 0;
    font-size: 13px;
    color: #888;
}

.table-header-info .info-stats {
    display: flex;
    gap: 20px;
}

.stat-item {
    text-align: center;
    padding: 8px 16px;
    background: white;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.stat-item .stat-number {
    font-size: 22px;
    font-weight: 700;
    color: #c24a16;
}

.stat-item .stat-label {
    font-size: 11px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
