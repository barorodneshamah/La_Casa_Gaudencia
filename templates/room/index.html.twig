                <div class="stat-item">
                    <div class="stat-number">{{ rooms|length }}</div>
                    <div class="stat-label">Total Rooms</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">{{ rooms|filter(r => r.status == 'Available')|length }}</div>
                    <div class="stat-label">Available</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">{{ rooms|filter(r => r.status == 'Occupied')|length }}</div>
                    <div class="stat-label">Occupied</div>
                </div>
            </div>
        </div>

        <!-- DATATABLE WRAPPER -->
        <div class="datatable-wrapper">
            {% if rooms|length > 0 %}
            <table id="roomTable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Capacity</th>
                        <th>Features</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    <tr>
                        <!-- ROOM NUMBER -->
                        <td>
                            <div class="room-number">
                                <div class="room-icon">
                                    {{ room.roomNumber }}
                                </div>
                                <div class="room-info">
                                    <div class="room-num">Room {{ room.roomNumber }}</div>
                                    <div class="room-floor">Floor {{ (room.roomNumber / 100)|round(0, 'floor') }}</div>
                                </div>
                            </div>
                        </td>

                        <!-- ROOM TYPE -->
                        <td>
                            {% set typeClass = 'standard' %}
                            {% if room.type|lower == 'deluxe' %}
                                {% set typeClass = 'deluxe' %}
                            {% elseif room.type|lower == 'suite' %}
                                {% set typeClass = 'suite' %}
                            {% elseif room.type|lower == 'presidential' %}
                                {% set typeClass = 'presidential' %}
                            {% endif %}
                            <span class="room-type {{ typeClass }}">
                                <i class="fas fa-star"></i>
                                {{ room.type }}
                            </span>
                        </td>

                        <!-- PRICE -->
                        <td>
                            <div class="price-cell">
                                â‚±{{ room.pricePerNight|number_format(2) }}
                                <span class="per-night">per night</span>
                            </div>
                        </td>

                        <!-- CAPACITY -->
                        <td>
                            <div class="capacity-cell">
                                <i class="fas fa-user-friends"></i>
                                <span>{{ room.capacity }} Guest{{ room.capacity > 1 ? 's' : '' }}</span>
                            </div>
                        </td>

                        <!-- FEATURES -->
                        <td>
                            <div class="features-cell">
                                {% set features = room.features|split(',') %}
                                {% for feature in features|slice(0, 3) %}
                                    <span class="feature-tag">
                                        <i class="fas fa-check"></i>
                                        {{ feature|trim }}
                                    </span>
                                {% endfor %}
                                {% if features|length > 3 %}
                                    <span class="feature-tag" data-tooltip="{{ features|slice(3)|join(', ') }}">
                                        +{{ features|length - 3 }} more
                                    </span>
                                {% endif %}
                            </div>
                        </td>

                        <!-- STATUS -->
                        <td>
                            {% set statusClass = 'available' %}
                            {% set statusIcon = 'check-circle' %}
                            {% if room.status|lower == 'occupied' %}
                                {% set statusClass = 'occupied' %}
                                {% set statusIcon = 'times-circle' %}
                            {% elseif room.status|lower == 'maintenance' %}
                                {% set statusClass = 'maintenance' %}
                                {% set statusIcon = 'tools' %}
                            {% elseif room.status|lower == 'reserved' %}
                                {% set statusClass = 'reserved' %}
                                {% set statusIcon = 'clock' %}
                            {% endif %}
                            <span class="status-badge {{ statusClass }}">
                                <i class="fas fa-{{ statusIcon }}"></i>
                                {{ room.status }}
                            </span>
                        </td>

                        <!-- ACTIONS -->
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_room_show', {'id': room.id}) }}" 
                                   class="btn-action btn-view" 
                                   data-tooltip="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="{{ path('app_room_edit', {'id': room.id}) }}" 
                                   class="btn-action btn-edit"
                                   data-tooltip="Edit Room">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form method="post" 
                                      action="{{ path('app_room_delete', {'id': room.id}) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete Room {{ room.roomNumber }}?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                                    <button type="submit" 
                                            class="btn-action btn-delete"
                                            data-tooltip="Delete Room">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
            <!-- EMPTY STATE -->
            <div class="empty-state">
                <i class="fas fa-bed"></i>
                <h4>No Rooms Found</h4>
                <p>Start by adding your first room to the system.</p>
                <a href="{{ path('app_room_new') }}" class="btn-add" style="margin-top: 20px;">
                    <i class="fas fa-plus"></i>
                    Add First Room
                </a>
            </div>
            {% endif %}
        </div>
    </div>

</div>

{% endblock %}

