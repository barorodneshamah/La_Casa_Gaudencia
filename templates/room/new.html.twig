                        {{ form_errors(form.roomNumber) }}
                        <span class="help-text"><i class="fas fa-lightbulb"></i> Enter a unique room identifier</span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-star"></i> Room Type <span class="required">*</span></label>
                        {{ form_widget(form.roomType) }}
                        {{ form_errors(form.roomType) }}
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-peso-sign"></i> Price Per Night <span class="required">*</span></label>
                        {{ form_widget(form.pricePerNight, {'attr': {'placeholder': '0.00'}}) }}
                        {{ form_errors(form.pricePerNight) }}
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-users"></i> Guest Capacity <span class="required">*</span></label>
                        {{ form_widget(form.capacity) }}
                        {{ form_errors(form.capacity) }}
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-toggle-on"></i> Status <span class="required">*</span></label>
                        {{ form_widget(form.status) }}
                        {{ form_errors(form.status) }}
                    </div>
                </div>
            </div>

