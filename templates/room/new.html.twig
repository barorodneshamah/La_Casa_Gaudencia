                    <div class="form-group">
                        <label><i class="fas fa-file-alt"></i> Room Description</label>
                        {{ form_widget(form.description, {'attr': {'placeholder': 'Describe the room...', 'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                        <span class="help-text"><i class="fas fa-lightbulb"></i> Short description for guests</span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-list-check"></i> Room Features</label>
                        {{ form_widget(form.features, {'attr': {'placeholder': 'WiFi, AC, Mini Bar, TV...', 'rows': 3, 'id': 'featuresInput'}}) }}
