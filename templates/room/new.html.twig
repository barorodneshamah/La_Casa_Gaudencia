<script>
document.addEventListener('DOMContentLoaded', function() {

    // ===== DEBUG HELPERS =====
    function findFileInput(id, uploadArea) {
        let el = document.getElementById(id);
        if (el && el.tagName && el.tagName.toLowerCase() === 'input' && el.type === 'file') return el;
        if (uploadArea) {
            el = uploadArea.querySelector('input[type="file"]');
            if (el) return el;
        }
        // last resort: any file input on page
        el = document.querySelector('input[type="file"]');
        return el;
    }

    // ===== DATE TIME (unchanged) =====
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');

        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', {
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
            dateEl.textContent = now.toLocaleDateString('en-US', {
                weekday: 'short',
                month: 'short',
                day: 'numeric',
                year: 'numeric'
            });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // ===== FEATURE TAGS (unchanged) =====
    (function(){ const featureTags = document.querySelectorAll('.feature-tag'); if (!featureTags.length) return; const featuresEl = document.getElementById('featuresInput') || document.querySelector('[name$="[features]"]') || document.querySelector('[name*="features"]'); if (!featuresEl) { console.warn('Feature tags: target input not found'); return; } const tagType = featuresEl.tagName.toLowerCase(); const getValues = () => { if (tagType === 'select') { return Array.from(featuresEl.options).filter(o => o.selected).map(o => o.value).filter(Boolean); } return (featuresEl.value || '').split(',').map(s => s.trim()).filter(Boolean); }; const setValues = (arr) => { if (tagType === 'select') { arr.forEach(v=>{ if (!Array.from(featuresEl.options).some(o=>o.value===v)){ const opt = document.createElement('option'); opt.value = v; opt.text = v; featuresEl.appendChild(opt); } }); Array.from(featuresEl.options).forEach(o => o.selected = arr.includes(o.value)); } else { featuresEl.value = arr.join(','); } featuresEl.dispatchEvent(new Event('input', {bubbles:true})); featuresEl.dispatchEvent(new Event('change', {bubbles:true})); }; const initial = getValues(); featureTags.forEach(tag => { if (initial.includes(tag.dataset.value)) tag.classList.add('selected'); }); featureTags.forEach(tag => { tag.addEventListener('click', () => { const value = String(tag.dataset.value || '').trim(); if (!value) return; let current = getValues(); if (!current.includes(value)) { current.push(value); tag.classList.add('selected'); } else { current = current.filter(v => v !== value); tag.classList.remove('selected'); } setValues(current); }); }); })();

    // ===== IMAGE UPLOAD HANDLER =====
    class ImageUploader {
        constructor(inputId, previewId, uploadAreaId, isMultiple = false) {
            this.uploadArea = document.getElementById(uploadAreaId);
            this.preview = document.getElementById(previewId);
            this.inputId = inputId;
            this.isMultiple = isMultiple;
            this.files = [];
            this.input = findFileInput(inputId, this.uploadArea);

            if (!this.uploadArea) {
                console.warn('Upload area not found:', uploadAreaId);
                return;
            }
            if (!this.preview) {
                console.warn('Preview container not found:', previewId);
                return;
            }
            if (!this.input) {
                console.warn('File input not found for id:', inputId, ' â€” looking inside upload area.');
            } else {
                // If the input was not inside the upload area, move it there so styling/overlay match
                if (!this.uploadArea.contains(this.input)) {
                    // make input visually invisible but inside uploadArea
                    this.input.style.position = 'absolute';
                    this.input.style.top = '0';
                    this.input.style.left = '0';
                    this.input.style.width = '100%';
                    this.input.style.height = '100%';
                    this.input.style.opacity = '0';
                    this.input.style.cursor = 'pointer';
                    this.uploadArea.insertBefore(this.input, this.uploadArea.firstChild);
                }
            }

            this.init();
        }

        init() {
            // Try to re-find input in case it's rendered later by Symfony JS
            this.input = findFileInput(this.inputId, this.uploadArea);
            if (!this.input) {
                console.error('No file input available for uploader', this.inputId);
                return;
            }

            this.input.addEventListener('change', (e) => {
                console.debug('File input change event for', this.inputId, e.target.files);
                this.handleFiles(e.target.files);
            });

            this.uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                this.uploadArea.classList.add('dragover');
            });

            this.uploadArea.addEventListener('dragleave', () => {
                this.uploadArea.classList.remove('dragover');
            });

            this.uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                this.uploadArea.classList.remove('dragover');
                this.handleFiles(e.dataTransfer.files);
            });
        }

        handleFiles(fileList) {
            const newFiles = Array.from(fileList).filter(file => {
                if (!file.type.startsWith('image/')) {
                    alert(`${file.name} is not an image`);
                    return false;
                }
                if (file.size > 5 * 1024 * 1024) {
                    alert(`${file.name} is too large (max 5MB)`);
                    return false;
                }
                return true;
            });

            if (this.isMultiple) {
                this.files = [...this.files, ...newFiles];
            } else {
                this.files = newFiles.slice(0, 1);
            }

            this.renderPreview();
            this.updateInput();
        }

        renderPreview() {
            this.preview.innerHTML = '';

            this.files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const item = document.createElement('div');
                    item.className = 'image-preview-item';
                    item.innerHTML = `
                        <img src="${e.target.result}" alt="${file.name}">
                        ${!this.isMultiple ? '<span class="main-image-badge">Main</span>' : `<span class="gallery-badge">${index + 1}</span>`}
                        <button type="button" class="remove-btn" title="Remove"><i class="fas fa-times"></i></button>
                    `;

                    item.querySelector('.remove-btn').addEventListener('click', () => {
                        this.files.splice(index, 1);
                        this.renderPreview();
                        this.updateInput();
                    });

                    this.preview.appendChild(item);
                };
                reader.readAsDataURL(file);
            });
        }

        updateInput() {
            try {
                const dt = new DataTransfer();
                this.files.forEach(file => dt.items.add(file));
                this.input.files = dt.files;
                console.debug('Updated input.files for', this.inputId, this.input.files);
            } catch (err) {
                console.error('Could not set input.files programmatically:', err);
            }
        }
    }

    // Initialize uploaders with improved lookup
    new ImageUploader('mainImageInput', 'mainImagePreview', 'mainUploadArea', false);
    new ImageUploader('galleryImagesInput', 'galleryImagesPreview', 'galleryUploadArea', true);

});
</script>
