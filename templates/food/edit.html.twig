<script>
document.addEventListener('DOMContentLoaded', function() {
    // ===== DEBUG HELPERS =====
    function findFileInput(id, uploadArea) {
        let el = document.getElementById(id);
        if (el && el.tagName && el.tagName.toLowerCase() === 'input' && el.type === 'file') return el;
        if (uploadArea) {
            el = uploadArea.querySelector('input[type="file"]');
            if (el) return el;
        }
        el = document.querySelector('input[type="file"]');
        return el;
    }

    // ===== DATE TIME =====
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');
        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true });
            dateEl.textContent = now.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // ===== DELETE MODAL =====
    const deleteBtn = document.getElementById('deleteFoodBtn');
    const deleteModal = document.getElementById('deleteModal');
    const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');

    if (deleteBtn && deleteModal) {
        deleteBtn.addEventListener('click', function() {
            deleteModal.classList.add('show');
        });

        cancelDeleteBtn.addEventListener('click', function() {
            deleteModal.classList.remove('show');
        });

        deleteModal.addEventListener('click', function(e) {
            if (e.target === deleteModal) {
                deleteModal.classList.remove('show');
            }
        });
    }

    // ===== QUANTITY INDICATOR =====
    const quantityInput = document.getElementById('quantityInput');
    const quantityBarFill = document.getElementById('quantityBarFill');
    const quantityText = document.getElementById('quantityText');

    function updateQuantityIndicator() {
        if (!quantityInput || !quantityBarFill || !quantityText) return;
        
        const value = parseInt(quantityInput.value) || 0;
        let percentage, colorClass, text;

        if (value >= 50) {
            percentage = 100;
            colorClass = 'high';
            text = 'Well Stocked';
        } else if (value >= 20) {
            percentage = 70;
            colorClass = 'high';
            text = 'In Stock';
        } else if (value >= 10) {
            percentage = 50;
            colorClass = 'medium';
            text = 'Running Low';
        } else if (value > 0) {
            percentage = 25;
            colorClass = 'low';
            text = 'Low Stock';
        } else {
            percentage = 5;
            colorClass = 'low';
            text = 'Out of Stock';
        }

        quantityBarFill.style.width = percentage + '%';
        quantityBarFill.className = 'quantity-bar-fill ' + colorClass;
        quantityText.textContent = text;
    }

    if (quantityInput) {
        quantityInput.addEventListener('input', updateQuantityIndicator);
        updateQuantityIndicator();
    }

    // ===== IMAGE UPLOAD HANDLER =====
    class ImageUploader {
        constructor(inputId, previewId, uploadAreaId, isMultiple = false) {
            this.uploadArea = document.getElementById(uploadAreaId);
            this.preview = document.getElementById(previewId);
            this.inputId = inputId;
            this.isMultiple = isMultiple;
            this.files = [];

            this.input = findFileInput(inputId, this.uploadArea);

            if (!this.uploadArea) {
                console.warn('Upload area not found:', uploadAreaId);
                return;
            }

            if (!this.preview) {
                console.warn('Preview container not found:', previewId);
                return;
            }

            if (!this.input) {
                console.warn('File input not found for id:', inputId);
            } else {
                if (!this.uploadArea.contains(this.input)) {
                    this.input.style.position = 'absolute';
                    this.input.style.top = '0';
                    this.input.style.left = '0';
                    this.input.style.width = '100%';
                    this.input.style.height = '100%';
                    this.input.style.opacity = '0';
                    this.input.style.cursor = 'pointer';
                    this.uploadArea.insertBefore(this.input, this.uploadArea.firstChild);
                }
            }

            this.init();
        }

        init() {
            this.input = findFileInput(this.inputId, this.uploadArea);
            if (!this.input) {
                console.error('No file input available for uploader', this.inputId);
                return;
            }

            this.input.addEventListener('change', (e) => {
                console.debug('File input change event for', this.inputId, e.target.files);
                this.handleFiles(e.target.files);
            });

            this.uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                this.uploadArea.classList.add('dragover');
            });

            this.uploadArea.addEventListener('dragleave', () => {
                this.uploadArea.classList.remove('dragover');
            });

            this.uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                this.uploadArea.classList.remove('dragover');
                this.handleFiles(e.dataTransfer.files);
            });
        }

        handleFiles(fileList) {
            const newFiles = Array.from(fileList).filter(file => {
                if (!file.type.startsWith('image/')) {
                    alert(`${file.name} is not an image`);
                    return false;
                }
                if (file.size > 5 * 1024 * 1024) {
                    alert(`${file.name} is too large (max 5MB)`);
                    return false;
                }
                return true;
            });

            if (this.isMultiple) {
                this.files = [...this.files, ...newFiles];
            } else {
                this.files = newFiles.slice(0, 1);
            }

            this.renderPreview();
            this.updateInput();
        }

        renderPreview() {
            this.preview.innerHTML = '';

            this.files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const item = document.createElement('div');
                    item.className = 'image-preview-item';
                    item.innerHTML = `
                        <img src="${e.target.result}" alt="${file.name}">
                        ${!this.isMultiple ? '<span class="main-image-badge">Main</span>' : `<span class="gallery-badge">${index + 1}</span>`}
                        <span class="image-badge new-badge">New</span>
                        <button type="button" class="remove-btn" title="Remove"><i class="fas fa-times"></i></button>
                    `;

                    item.querySelector('.remove-btn').addEventListener('click', () => {
                        this.files.splice(index, 1);
                        this.renderPreview();
                        this.updateInput();
                    });

                    this.preview.appendChild(item);
                };
                reader.readAsDataURL(file);
            });
        }

        updateInput() {
            try {
                const dt = new DataTransfer();
                this.files.forEach(file => dt.items.add(file));
                this.input.files = dt.files;
                console.debug('Updated input.files for', this.inputId, this.input.files);
            } catch (err) {
                console.error('Could not set input.files programmatically:', err);
            }
        }
    }

    // Initialize uploaders
    new ImageUploader('mainImageInput', 'mainImagePreview', 'mainUploadArea', false);
    new ImageUploader('galleryImagesInput', 'galleryImagesPreview', 'galleryUploadArea', true);

    // ===== DELETE IMAGE BUTTONS =====
    document.querySelectorAll('.btn-delete-image').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            if (!confirm('Delete this image?')) return;

            const action = btn.dataset.action;
            const token = btn.dataset.token;

            try {
                const res = await fetch(action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: new URLSearchParams({ _token: token })
                });

                if (res.ok) {
                    location.reload();
                } else {
                    const text = await res.text();
                    console.error('Delete failed', res.status, text);
                    alert('Failed to delete image.');
                }
            } catch (err) {
                console.error('Delete error', err);
                alert('Failed to delete image.');
            }
        });
    });
});
</script>
