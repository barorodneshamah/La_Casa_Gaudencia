<script>
document.addEventListener('DOMContentLoaded', function() {

    // ===== DEBUG HELPERS =====
    function findFileInput(id, uploadArea) {
        let el = document.getElementById(id);
        if (el && el.tagName && el.tagName.toLowerCase() === 'input' && el.type === 'file') return el;
        if (uploadArea) {
            el = uploadArea.querySelector('input[type="file"]');
            if (el) return el;
        }
        return null;
    }

    // ===== DATE TIME =====
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');

        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', {
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
            dateEl.textContent = now.toLocaleDateString('en-US', {
                weekday: 'short',
                month: 'short',
                day: 'numeric',
                year: 'numeric'
            });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // ===== CATEGORY TAGS =====
    (function() {
        const categoryTags = document.querySelectorAll('.category-tag');
        if (!categoryTags.length) return;
        
        const categoryInput = document.getElementById('categoryInput') || 
                              document.querySelector('[name$="[category]"]') || 
                              document.querySelector('[name*="category"]');
        
        if (!categoryInput) {
            console.warn('Category input not found');
            return;
        }

        // Check if it's a select or input
        const isSelect = categoryInput.tagName.toLowerCase() === 'select';
        
        // Set initial selected state
        const currentValue = isSelect ? categoryInput.value : categoryInput.value;
        categoryTags.forEach(tag => {
            if (tag.dataset.value === currentValue) {
                tag.classList.add('selected');
            }
        });

        categoryTags.forEach(tag => {
            tag.addEventListener('click', () => {
                const value = tag.dataset.value;
                
                // Remove selected from all
                categoryTags.forEach(t => t.classList.remove('selected'));
                
                // Add selected to clicked
                tag.classList.add('selected');
                
                // Update input
                if (isSelect) {
                    // Find and select the matching option
                    Array.from(categoryInput.options).forEach(opt => {
                        opt.selected = opt.value === value || opt.text === value;
                    });
                } else {
                    categoryInput.value = value;
                }
                
                categoryInput.dispatchEvent(new Event('change', {bubbles: true}));
            });
        });
    })();

    // ===== IMAGE UPLOAD HANDLER =====
    class ImageUploader {
        constructor(inputId, previewId, uploadAreaId, isMultiple = false) {
            this.uploadArea = document.getElementById(uploadAreaId);
            this.preview = document.getElementById(previewId);
            this.inputId = inputId;
            this.isMultiple = isMultiple;
            this.files = [];
            this.input = findFileInput(inputId, this.uploadArea);

            if (!this.uploadArea) {
                console.warn('Upload area not found:', uploadAreaId);
                return;
            }
            if (!this.preview) {
                console.warn('Preview container not found:', previewId);
                return;
            }
            if (!this.input) {
                console.warn('File input not found for id:', inputId);
                return;
            }

            this.init();
        }

        init() {
            this.input.addEventListener('change', (e) => {
                this.handleFiles(e.target.files);
            });

            this.uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                this.uploadArea.classList.add('dragover');
            });

            this.uploadArea.addEventListener('dragleave', () => {
                this.uploadArea.classList.remove('dragover');
            });

            this.uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                this.uploadArea.classList.remove('dragover');
                this.handleFiles(e.dataTransfer.files);
            });
        }

        handleFiles(fileList) {
            const newFiles = Array.from(fileList).filter(file => {
                if (!file.type.startsWith('image/')) {
                    alert(`${file.name} is not an image`);
                    return false;
                }
                if (file.size > 5 * 1024 * 1024) {
                    alert(`${file.name} is too large (max 5MB)`);
                    return false;
                }
                return true;
            });

            if (this.isMultiple) {
                this.files = [...this.files, ...newFiles];
            } else {
                this.files = newFiles.slice(0, 1);
            }

            this.renderPreview();
            this.updateInput();
        }

        renderPreview() {
            this.preview.innerHTML = '';

            this.files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const item = document.createElement('div');
                    item.className = 'image-preview-item';
                    item.innerHTML = `
                        <img src="${e.target.result}" alt="${file.name}">
                        ${!this.isMultiple ? '<span class="main-image-badge">Main</span>' : `<span class="gallery-badge">${index + 1}</span>`}
                        <button type="button" class="remove-btn" title="Remove"><i class="fas fa-times"></i></button>
                    `;

                    item.querySelector('.remove-btn').addEventListener('click', () => {
                        this.files.splice(index, 1);
                        this.renderPreview();
                        this.updateInput();
                    });

                    this.preview.appendChild(item);
                };
                reader.readAsDataURL(file);
            });
        }

        updateInput() {
            try {
                const dt = new DataTransfer();
                this.files.forEach(file => dt.items.add(file));
                this.input.files = dt.files;
            } catch (err) {
                console.error('Could not set input.files programmatically:', err);
            }
        }
    }

    // Initialize uploaders
    new ImageUploader('mainImageInput', 'mainImagePreview', 'mainUploadArea', false);
    new ImageUploader('galleryImagesInput', 'galleryImagesPreview', 'galleryUploadArea', true);

});
</script>
