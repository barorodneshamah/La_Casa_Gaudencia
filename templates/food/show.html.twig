                                    {% set stockPercent = food.availableStock > 100 ? 100 : food.availableStock %}
                                    {% set stockLevel = stockPercent >= 50 ? 'high' : (stockPercent >= 20 ? 'medium' : 'low') %}
                                    <div class="stock-fill {{ stockLevel }}" style="width: {{ stockPercent }}%;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- BODY -->
        <div class="food-body">
            {# GALLERY: Get images from database #}
            {% set allImages = [] %}

            {# Add main image first if it exists #}
            {% if food.mainImage %}
                {% set allImages = allImages|merge([food.mainImage]) %}
            {% endif %}

            {# Add gallery images if they exist #}
            {% if food.galleryImages and food.galleryImages|length > 0 %}
                {% set allImages = allImages|merge(food.galleryImages) %}
            {% endif %}

            <div class="food-gallery" id="foodGallery">
                <div class="gallery-main">
                    {% if allImages|length > 0 %}
                        {% if allImages|length > 1 %}
                            <button class="gallery-nav prev" type="button" aria-label="Previous">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                        {% endif %}
                        
                        <img id="galleryMainImage" 
                             src="{{ asset('uploads/foods/' ~ allImages[0]) }}" 
                             alt="{{ food.name }}">
                        
                        {% if allImages|length > 1 %}
                            <button class="gallery-nav next" type="button" aria-label="Next">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        {% endif %}
                    {% else %}
                        {# No images placeholder #}
                        <div class="no-image-placeholder">
                            <i class="fas fa-image"></i>
                            <span>No images available</span>
                            <small>Add images through the Edit page</small>
                        </div>
                    {% endif %}
                </div>
                
                {% if allImages|length > 1 %}
                    <div class="gallery-thumbs">
                        {% for imagePath in allImages %}
                            <button class="gallery-thumb {{ loop.first ? 'active' : '' }}" 
                                    type="button" 
                                    data-index="{{ loop.index0 }}"
                                    data-image-path="{{ imagePath }}"
                                    aria-label="Image {{ loop.index }}">
                                <img src="{{ asset('uploads/foods/' ~ imagePath) }}" alt="Thumbnail {{ loop.index }}">
                            </button>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {# DETAILS GRID #}
            <h3 class="section-heading">
                 Food Information
            </h3>
            <div class="details-grid">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-hashtag"></i> Food ID
                    </span>
                    <span class="detail-value">#{{ food.id }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-burger"></i> Name
                    </span>
                    <span class="detail-value">{{ food.name }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-layer-group"></i> Category
                    </span>
                    <span class="detail-value">{{ food.category }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-peso-sign"></i> Price
                    </span>
                    <span class="detail-value">₱{{ food.price|number_format(2) }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-cubes"></i> Available Stock
                    </span>
                    <span class="detail-value">{{ food.availableStock }} item{{ food.availableStock > 1 ? 's' : '' }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-circle-check"></i> Status
                    </span>
                    <span class="detail-value">{{ food.status }}</span>
                </div>
            </div>

            {# DESCRIPTION #}
            {% if food.description %}
                <h3 class="section-heading">
                    <i class="fas fa-align-left"></i>
                    Description
                </h3>
                <div class="description-section">
                    <p class="description-text">{{ food.description|nl2br }}</p>
                </div>
            {% endif %}
            
            {# TIMESTAMPS #}
            <div class="timestamps">
                {% if food.createdAt %}
                    <div class="timestamp-item">
                        <i class="fas fa-plus-circle"></i>
                        <span>Created: {{ food.createdAt|date('M j, Y \\a\\t g:i A') }}</span>
                    </div>
                {% endif %}
                {% if food.updatedAt %}
                    <div class="timestamp-item">
                        <i class="fas fa-edit"></i>
                        <span>Last Updated: {{ food.updatedAt|date('M j, Y \\a\\t g:i A') }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Date/time
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');
        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true });
            dateEl.textContent = now.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // Gallery functionality
    const galleryEl = document.getElementById('foodGallery');
    if (galleryEl) {
        const mainImg = document.getElementById('galleryMainImage');
        const thumbs = Array.from(galleryEl.querySelectorAll('.gallery-thumb'));
        const prev = galleryEl.querySelector('.gallery-nav.prev');
        const next = galleryEl.querySelector('.gallery-nav.next');
        let idx = 0;

        if (!mainImg || thumbs.length === 0) {
            return;
        }

        function show(i) {
            idx = ((i % thumbs.length) + thumbs.length) % thumbs.length;
            
            // Get the image path from data attribute
            const imagePath = thumbs[idx].getAttribute('data-image-path');
            const imageUrl = '/uploads/foods/' + imagePath;
            mainImg.setAttribute('src', imageUrl);
            
            // Update active thumbnail
            thumbs.forEach((t, k) => {
                t.classList.toggle('active', k === idx);
            });
        }

        // Thumbnail clicks
        thumbs.forEach((t, index) => {
            t.addEventListener('click', () => show(index));
        });
        
        // Navigation buttons
        if (prev) {
            prev.addEventListener('click', () => show(idx - 1));
        }
        
        if (next) {
            next.addEventListener('click', () => show(idx + 1));
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                show(idx - 1);
            } else if (e.key === 'ArrowRight') {
                show(idx + 1);
            }
        });
    }
});
</script>
