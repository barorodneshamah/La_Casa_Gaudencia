    <div class="sidebar-logout">
        <a href="{{ path('app_logout') }}" class="logout-btn">
        Log Out
        </a>
    </div>
</div>

<!-- TOPBAR -->
<div class="topbar">
    <div class="topbar-left">
        <a href="{{ path('app_payment_dashboard') }}" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <span class="page-title">{{ serviceLabel }}</span>
    </div>
    <div class="topbar-right">
        <div class="datetime-display">
            <div class="time" id="currentTime">00:00 AM</div>
            <div class="date" id="currentDate">Loading...</div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">
    <!-- PAGE HEADER -->
    <div class="page-header">
        <div class="page-header-content">

            <div class="page-header-text">
                <h2>{{ serviceLabel }} Payments</h2>
                <p>Manage and track all payment transactions for {{ serviceLabel|lower }}.</p>
            </div>
        </div>
    </div>

    <!-- STATS CARDS -->
    {% set totalPayments = payments|length %}
    {% set approvedPayments = payments|filter(p => p.status == 'APPROVED') %}
    {% set pendingPayments = payments|filter(p => p.status == 'PENDING') %}
    {% set rejectedPayments = payments|filter(p => p.status == 'REJECTED') %}
    
    {% set totalAmount = 0 %}
    {% set approvedAmount = 0 %}
    {% set pendingAmount = 0 %}
    
    {% for payment in payments %}
        {% set totalAmount = totalAmount + payment.amount %}
    {% endfor %}
    {% for payment in approvedPayments %}
        {% set approvedAmount = approvedAmount + payment.amount %}
    {% endfor %}
    {% for payment in pendingPayments %}
        {% set pendingAmount = pendingAmount + payment.amount %}
    {% endfor %}

    <div class="stats-grid">
        <div class="stat-card total">
            <div class="stat-card-header">
                <div class="stat-icon"><i class="fas fa-receipt"></i></div>
            </div>
            <div class="stat-value">{{ totalPayments }}</div>
            <div class="stat-label">Total Payments</div>
        </div>
        <div class="stat-card approved">
            <div class="stat-card-header">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
            </div>
            <div class="stat-value">₱{{ approvedAmount|number_format(2) }}</div>
            <div class="stat-label">Approved ({{ approvedPayments|length }})</div>
        </div>
        <div class="stat-card pending">
            <div class="stat-card-header">
                <div class="stat-icon"><i class="fas fa-clock"></i></div>
            </div>
            <div class="stat-value">₱{{ pendingAmount|number_format(2) }}</div>
            <div class="stat-label">Pending ({{ pendingPayments|length }})</div>
        </div>
        <div class="stat-card rejected">
            <div class="stat-card-header">
                <div class="stat-icon"><i class="fas fa-times-circle"></i></div>
            </div>
            <div class="stat-value">{{ rejectedPayments|length }}</div>
            <div class="stat-label">Rejected</div>
        </div>
    </div>

    <!-- FILTER TABS -->
    <div class="filter-section">
        <div class="filter-tabs">
            <a href="{{ path('app_payment_by_service', {serviceType: serviceType}) }}" 
               class="filter-tab all {{ currentStatus is null ? 'active' : '' }}">
                <i class="fas fa-list"></i> All
                <span class="count">{{ totalPayments }}</span>
            </a>
            <a href="{{ path('app_payment_by_service', {serviceType: serviceType, status: 'APPROVED'}) }}" 
               class="filter-tab approved {{ currentStatus == 'APPROVED' ? 'active' : '' }}">
                <i class="fas fa-check-circle"></i> Approved
                <span class="count">{{ approvedPayments|length }}</span>
            </a>
            <a href="{{ path('app_payment_by_service', {serviceType: serviceType, status: 'PENDING'}) }}" 
               class="filter-tab pending {{ currentStatus == 'PENDING' ? 'active' : '' }}">
                <i class="fas fa-clock"></i> Pending
                <span class="count">{{ pendingPayments|length }}</span>
            </a>
            <a href="{{ path('app_payment_by_service', {serviceType: serviceType, status: 'REJECTED'}) }}" 
               class="filter-tab rejected {{ currentStatus == 'REJECTED' ? 'active' : '' }}">
                <i class="fas fa-times-circle"></i> Rejected
                <span class="count">{{ rejectedPayments|length }}</span>
            </a>
        </div>
    </div>

    <!-- PAYMENTS TABLE -->
    <div class="payments-section">
        <div class="payments-header">
            <h3 class="payments-title">
                <i class="fas fa-credit-card"></i>
                Payment Transactions
            </h3>
            <span class="payments-count">{{ payments|length }} payments</span>
        </div>

        {% if payments|length > 0 %}
        <table class="payments-table">
            <thead>
                <tr>
                    <th>Transaction</th>
                    <th>Guest</th>
                    <th>Reservation</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for payment in payments %}
                <tr>
                    <td>
                        <span class="transaction-ref">{{ payment.transactionReference }}</span>
                    </td>
                    <td>
                        <div class="guest-info">
                            <span class="guest-name">{{ payment.paidBy.firstName }} {{ payment.paidBy.lastName }}</span>
                            <span class="guest-email">{{ payment.paidBy.email }}</span>
                        </div>
                    </td>
                    <td>
                        <div class="reservation-info">
                            <span class="reservation-ref">{{ payment.reservation.referenceNumber }}</span>
                            <span class="reservation-date">
                                {{ payment.reservation.checkIn|date('M d, Y') }}
                            </span>
                        </div>
                    </td>
                    <td>
                        <span class="amount">₱{{ payment.amount|number_format(2) }}</span>
                    </td>
                    <td>
                        {% set methodClass = 'default' %}
                        {% if payment.paymentMethod == 'GCASH' %}
                            {% set methodClass = 'gcash' %}
                        {% elseif payment.paymentMethod == 'MAYA' %}
                            {% set methodClass = 'maya' %}
                        {% elseif payment.paymentMethod == 'CASH' %}
                            {% set methodClass = 'cash' %}
                        {% elseif payment.paymentMethod == 'BANK_TRANSFER' %}
                            {% set methodClass = 'bank' %}
                        {% elseif payment.paymentMethod == 'PAYPAL' %}
                            {% set methodClass = 'paypal' %}
                        {% elseif payment.paymentMethod in ['CREDIT_CARD', 'DEBIT_CARD'] %}
                            {% set methodClass = 'card' %}
                        {% endif %}
                        <span class="payment-method {{ methodClass }}">
                            {% if payment.paymentMethod == 'GCASH' %}
                                <i class="fas fa-mobile-alt"></i>
                            {% elseif payment.paymentMethod == 'MAYA' %}
                                <i class="fas fa-mobile-alt"></i>
                            {% elseif payment.paymentMethod == 'CASH' %}
                                <i class="fas fa-money-bill-wave"></i>
                            {% elseif payment.paymentMethod == 'BANK_TRANSFER' %}
                                <i class="fas fa-university"></i>
                            {% elseif payment.paymentMethod == 'PAYPAL' %}
                                <i class="fab fa-paypal"></i>
                            {% elseif payment.paymentMethod in ['CREDIT_CARD', 'DEBIT_CARD'] %}
                                <i class="fas fa-credit-card"></i>
                            {% else %}
                                <i class="fas fa-wallet"></i>
                            {% endif %}
                            {{ payment.paymentMethodLabel }}
                        </span>
                    </td>
                    <td>
                        <span class="status-badge {{ payment.status|lower }}">
                            {% if payment.status == 'PENDING' %}
                                <i class="fas fa-clock"></i>
                            {% elseif payment.status == 'APPROVED' %}
                                <i class="fas fa-check-circle"></i>
                            {% elseif payment.status == 'REJECTED' %}
                                <i class="fas fa-times-circle"></i>
                            {% elseif payment.status == 'REFUNDED' %}
                                <i class="fas fa-undo"></i>
                            {% endif %}
                            {{ payment.status|capitalize }}
                        </span>
                    </td>
                    <td>
                        {{ payment.createdAt|date('M d, Y') }}<br>
                        <small style="color: #888;">{{ payment.createdAt|date('h:i A') }}</small>
                    </td>
                    <td>
                        <div class="action-btns">
                            <a href="{{ path('app_payment_show', {id: payment.id}) }}" 
                               class="action-btn view" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if payment.status == 'PENDING' %}
                                <a href="{{ path('app_payment_show', {id: payment.id}) }}" 
                                   class="action-btn approve" title="Review & Approve">
                                    <i class="fas fa-check"></i>
                                </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-inbox"></i>
            </div>
            <h3>No Payments Found</h3>
            <p>
                {% if currentStatus %}
                    There are no {{ currentStatus|lower }} payments for {{ serviceLabel|lower }} at the moment.
                {% else %}
                    There are no payment transactions for {{ serviceLabel|lower }} yet.
                {% endif %}
            </p>
            <a href="{{ path('app_payment_dashboard') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    function updateDateTime() {
        const now = new Date();
        document.getElementById('currentTime').textContent = now.toLocaleTimeString('en-US', {
            hour: '2-digit',
            minute: '2-digit',
            hour12: true
        });
        document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', {
            weekday: 'short',
            month: 'short',
            day: 'numeric',
            year: 'numeric'
        });
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);
});
</script>
{% endblock %}