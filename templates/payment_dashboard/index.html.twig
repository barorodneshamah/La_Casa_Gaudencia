{% extends 'base.html.twig' %}

{% block title %}Payment Dashboard{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
:root {
    --brand-primary: #c24a16;
    --brand-primary-light: #e85d04;
    --brand-text: #2f2f2f;
    --brand-text-muted: #888888;
}

* { margin: 0; padding: 0; box-sizing: border-box; }

body {
    background-color: #f7f5edff;
    font-family: 'Roboto', sans-serif;
    color: #2f2f2f;
}

/* ===== SIDEBAR ===== */
.sidebar-accent {
    position: fixed;
    top: 0;
    left: 0;
    width: 8px;
    height: 100vh;
    background-color: #c24a16;
    border-radius: 0 6px 6px 0;
    z-index: 30;
}

.sidebar {
    position: fixed;
    top: 0;
    left: 8px;
    width: 260px;
    height: 100vh;
    background: white;
    box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 28px;
    border-radius: 0 12px 12px 0;
    z-index: 20;
}

.brand { text-align: center; margin-bottom: 30px; }
.brand img { width: 75px; height: 75px; margin-bottom: 8px; }
.brand h1 { font-family: 'Playfair Display', serif; color: #c24a16; font-size: 22px; margin: 0; }
.brand small { color: #777; font-size: 12px; }

.sidebar-separator {
    width: 75%;
    height: 1.5px;
    background: linear-gradient(to right, transparent, #d1d1d1, transparent);
    margin: 10px 0 15px 0;
}

.sidebar ul { list-style: none; width: 100%; padding: 0; }
.sidebar ul li a {
    display: flex;
    gap: 14px;
    align-items: center;
    padding: 14px 35px;
    font-size: 15px;
    font-weight: 500;
    color: #2f2f2f;
    text-decoration: none;
    transition: all .25s ease;
}
.sidebar ul li svg { width: 20px; height: 20px; fill: #888; transition: .25s; }
.sidebar ul li a:hover, .sidebar ul li.active a {
    background-color: #c24a16;
    color: white;
    margin-left: -12px;
    border-radius: 0 30px 30px 0;
    padding-left: 48px;
}
.sidebar ul li a:hover svg, .sidebar ul li.active a svg { fill: white !important; }

.sidebar-logout {
    width: 100%;
    padding: 20px 30px;
    margin-top: auto;
    display: flex;
    justify-content: center;
    border-top: 1px solid #eee;
}
.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 80%;
    padding: 14px 24px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.3s ease;
}
.logout-btn:hover { transform: translateY(-2px); }

/* ===== TOPBAR ===== */
.topbar {
    margin-left: 268px;
    background: #c24a16;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 35px;
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
}

.topbar-left { font-family: 'Playfair Display', serif; font-size: 24px; font-weight: 600; }
.topbar-right { display: flex; align-items: center; gap: 20px; }

.datetime-display {
    text-align: right;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8px;
}
.datetime-display .time { font-size: 14px; font-weight: 600; }
.datetime-display .date { font-size: 10px; color: rgba(255,255,255,0.8); }

/* ===== MAIN CONTENT ===== */
.main-content {
    margin-left: 268px;
    padding: 32px;
    min-height: calc(100vh - 70px);
}

/* ===== WELCOME SECTION ===== */
.welcome-section {
    background: linear-gradient(135deg, #fff 0%, #faf9f5 100%);
    border-radius: 16px;
    padding: 28px 32px;
    margin-bottom: 32px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid rgba(194, 74, 22, 0.1);
}
.welcome-text h2 { font-family: 'Playfair Display', serif; font-size: 28px; color: var(--brand-text); margin-bottom: 8px; }
.welcome-text p { color: var(--brand-text-muted); font-size: 15px; margin: 0; }
.welcome-date {
    text-align: right;
    padding: 12px 20px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    border-radius: 12px;
    color: white;
}
.welcome-date .day { font-size: 32px; font-weight: 700; line-height: 1; }
.welcome-date .month-year { font-size: 13px; opacity: 0.9; }

/* ===== SECTION HEADER ===== */
.section-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24px; }
.section-title {
    font-family: 'Playfair Display', serif;
    font-size: 22px;
    color: var(--brand-text);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
}
.section-title i { color: var(--brand-primary); font-size: 20px; }

.btn-pending {
    padding: 12px 24px;
    background: linear-gradient(135deg, #f57f17 0%, #ffb300 100%);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(245, 127, 23, 0.3);
}
.btn-pending:hover { transform: translateY(-2px); color: white; box-shadow: 0 6px 20px rgba(245, 127, 23, 0.4); }
.btn-pending .badge { background: white; color: #f57f17; padding: 4px 10px; border-radius: 20px; font-size: 12px; font-weight: 700; }

/* ===== OVERVIEW STATS ===== */
.overview-stats { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 32px; }

.overview-card {
    background: white;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}
.overview-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 4px;
    background: linear-gradient(90deg, var(--card-color), var(--card-color-light));
}
.overview-card:hover { transform: translateY(-6px); box-shadow: 0 8px 30px rgba(0,0,0,0.1); }

.overview-card.revenue { --card-color: #059669; --card-color-light: #10b981; }
.overview-card.today { --card-color: #2563eb; --card-color-light: #3b82f6; }
.overview-card.pending-amount { --card-color: #f57f17; --card-color-light: #ffb300; }
.overview-card.pending-count { --card-color: #c2185b; --card-color-light: #e91e63; }

.overview-card-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px; }
.overview-icon {
    width: 52px; height: 52px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--card-color), var(--card-color-light));
    color: white;
    font-size: 22px;
}
.overview-content h3 { font-size: 28px; font-weight: 700; color: var(--brand-text); margin-bottom: 4px; }
.overview-content p { font-size: 13px; color: var(--brand-text-muted); margin: 0; text-transform: uppercase; letter-spacing: 0.5px; }

/* ===== SERVICE CARDS ===== */
.service-cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 24px; }

.service-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    border: 2px solid transparent;
}
.service-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 35px rgba(0,0,0,0.12);
    border-color: var(--card-color);
}

.service-card-header {
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 18px;
    border-bottom: 1px solid #f0f0f0;
}
.service-card-icon {
    width: 60px;
    height: 60px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26px;
}
.service-card-title { flex: 1; }
.service-card-title h3 { font-size: 18px; font-weight: 700; color: #2f2f2f; margin: 0 0 4px 0; }
.service-card-title p { font-size: 13px; color: #888; margin: 0; }

.service-card-body { padding: 20px 24px; }
.service-card-stats { display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; }
.stat-box {
    text-align: center;
    padding: 14px 10px;
    background: #f9f9f9;
    border-radius: 12px;
    transition: all 0.3s ease;
}
.stat-box:hover { background: #f5f5f5; }
.stat-box .number { font-size: 22px; font-weight: 700; color: #2f2f2f; }
.stat-box .label { font-size: 11px; color: #888; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px; }
.stat-box.pending .number { color: #f57f17; }
.stat-box.revenue .number { color: #059669; }

.service-card-footer {
    padding: 16px 24px;
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.view-details {
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s;
}
.view-details i { transition: transform 0.3s; }
.service-card:hover .view-details i { transform: translateX(5px); }

.pending-badge {
    background: linear-gradient(135deg, #f57f17 0%, #ffb300 100%);
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1400px) {
    .overview-stats { grid-template-columns: repeat(2, 1fr); }
}
@media (max-width: 992px) {
    .overview-stats { grid-template-columns: 1fr; }
    .welcome-section { flex-direction: column; text-align: center; gap: 20px; }
    .service-cards { grid-template-columns: 1fr; }
}
@media (max-width: 768px) {
    .sidebar, .sidebar-accent { display: none; }
    .main-content, .topbar { margin-left: 0; }
}
</style>
{% endblock %}

