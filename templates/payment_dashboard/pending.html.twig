<script>
document.addEventListener('DOMContentLoaded', function() {

    // ===== DATE TIME =====
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');
        
        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit', 
                hour12: true 
            });
            dateEl.textContent = now.toLocaleDateString('en-US', { 
                weekday: 'short', 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // ===== FILTER FUNCTIONALITY =====
    const serviceFilter = document.getElementById('serviceFilter');
    const methodFilter = document.getElementById('methodFilter');
    const searchInput = document.getElementById('searchInput');

    function filterPayments() {
        const serviceValue = serviceFilter.value.toLowerCase();
        const methodValue = methodFilter.value.toLowerCase();
        const searchValue = searchInput.value.toLowerCase();

        document.querySelectorAll('.payment-card').forEach(card => {
            const service = card.dataset.service.toLowerCase();
            const method = card.dataset.method.toLowerCase();
            const searchText = card.dataset.search;

            const matchesService = !serviceValue || service === serviceValue;
            const matchesMethod = !methodValue || method === methodValue;
            const matchesSearch = !searchValue || searchText.includes(searchValue);

            card.style.display = (matchesService && matchesMethod && matchesSearch) ? '' : 'none';
        });
    }

    if (serviceFilter) serviceFilter.addEventListener('change', filterPayments);
    if (methodFilter) methodFilter.addEventListener('change', filterPayments);
    if (searchInput) searchInput.addEventListener('input', filterPayments);

});

// ===== MODAL FUNCTIONS =====
function showApproveModal(paymentId, reference, amount) {
    document.getElementById('approveForm').action = `/payments/payment/${paymentId}/approve`;
    document.getElementById('approveToken').value = `approve${paymentId}`;
    document.getElementById('approveRefText').textContent = reference;
    document.getElementById('approveAmountText').textContent = '₱' + parseFloat(amount).toLocaleString('en-US', {minimumFractionDigits: 2});
    document.getElementById('approveModal').classList.add('show');
}

function showRejectModal(paymentId, reference) {
    document.getElementById('rejectForm').action = `/payments/payment/${paymentId}/reject`;
    document.getElementById('rejectToken').value = `reject${paymentId}`;
    document.getElementById('rejectRefText').textContent = reference;
    document.getElementById('rejectModal').classList.add('show');
}

function showImagePreview(imageSrc) {
    document.getElementById('previewImage').src = imageSrc;
    document.getElementById('imageModal').classList.add('show');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.remove('show');
}

// Close modal on overlay click
document.querySelectorAll('.modal-overlay').forEach(modal => {
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            modal.classList.remove('show');
        }
    });
});

// Close modal on Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        document.querySelectorAll('.modal-overlay.show').forEach(modal => {
            modal.classList.remove('show');
        });
    }
});
</script>
