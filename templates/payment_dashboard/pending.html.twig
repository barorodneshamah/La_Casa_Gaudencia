    <!-- LOGOUT SECTION -->
    <div class="sidebar-logout">
        <a href="{{ path('app_logout') }}" class="logout-btn">
            Log Out
        </a>
    </div>
</div>

<!-- TOPBAR -->
<div class="topbar">
    <div class="topbar-left">Pending Payment Approvals</div>
    <div class="topbar-right">
        <div class="datetime-display">
            <div class="time" id="currentTime">00:00 AM</div>
            <div class="date" id="currentDate">Loading...</div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">

    <!-- FLASH MESSAGES -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message {{ label }}">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }}"></i>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- PAGE HEADER -->
    <div class="page-header">
        <h2 class="section-title">
            Pending Approvals
        </h2>
        <div class="header-buttons">
            <a href="{{ path('app_payment_dashboard') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Back to Dashboard
            </a>
        </div>
    </div>

    <!-- STATS ROW -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon pending">
                <i class="fas fa-hourglass-half"></i>
            </div>
            <div class="stat-info">
                <h4>Total Pending</h4>
                <div class="stat-value">{{ payments|length }}</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon amount">
                <i class="fas fa-peso-sign"></i>
            </div>
            <div class="stat-info">
                <h4>Pending Amount</h4>
                {% set totalPending = 0 %}
                {% for payment in payments %}
                    {% set totalPending = totalPending + payment.amount %}
                {% endfor %}
                <div class="stat-value">₱{{ totalPending|number_format(2, '.', ',') }}</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon urgent">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-info">
                <h4>Urgent (>24h)</h4>
                {% set urgentCount = 0 %}
                {% for payment in payments %}
                    {% set hoursAgo = date().diff(payment.createdAt).h + (date().diff(payment.createdAt).days * 24) %}
                    {% if hoursAgo > 24 %}
                        {% set urgentCount = urgentCount + 1 %}
                    {% endif %}
                {% endfor %}
                <div class="stat-value">{{ urgentCount }}</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon today">
                <i class="fas fa-calendar-day"></i>
            </div>
            <div class="stat-info">
                <h4>Received Today</h4>
                {% set todayCount = 0 %}
                {% for payment in payments %}
                    {% if payment.createdAt|date('Y-m-d') == 'now'|date('Y-m-d') %}
                        {% set todayCount = todayCount + 1 %}
                    {% endif %}
                {% endfor %}
                <div class="stat-value">{{ todayCount }}</div>
            </div>
        </div>
    </div>

    <!-- FILTER BAR -->
    <div class="filter-bar">
        <div class="filter-label">
            <i class="fas fa-filter"></i>
            Filters:
        </div>
        
        <select id="serviceFilter">
            <option value="">All Services</option>
            <option value="ROOM">Room Reservations</option>
            <option value="TOUR">Tour Bookings</option>
            <option value="PACKAGE">Package Deals</option>
            <option value="FOOD">Food Reservations</option>
        </select>
        
        <select id="methodFilter">
            <option value="">All Methods</option>
            <option value="GCASH">GCash</option>
            <option value="MAYA">Maya</option>
            <option value="BANK_TRANSFER">Bank Transfer</option>
            <option value="CASH">Cash</option>
            <option value="CREDIT_CARD">Credit Card</option>
        </select>
        
        <input type="text" id="searchInput" class="search-input" placeholder="Search reference or guest...">
        
        <button type="button" class="btn-refresh" onclick="location.reload()">
            <i class="fas fa-sync-alt"></i>
            Refresh
        </button>
    </div>

    <!-- PAYMENTS LIST -->
    {% if payments|length > 0 %}
        <div class="payments-container" id="paymentsList">
            {% for payment in payments %}
                {% set reservation = payment.reservation %}
                {% set guest = payment.paidBy %}
                {% set hoursAgo = date().diff(payment.createdAt).h + (date().diff(payment.createdAt).days * 24) %}
                
                <div class="payment-card {% if hoursAgo > 24 %}urgent{% endif %}"
                     data-service="{{ reservation.serviceType }}"
                     data-method="{{ payment.paymentMethod }}"
                     data-search="{{ payment.transactionReference|lower }} {{ guest.firstName|lower }} {{ guest.lastName|lower }} {{ guest.email|lower }}">
                    
                    <!-- Card Header -->
                    <div class="payment-card-header">
                        <div class="payment-ref">
                            <span class="ref-code">{{ payment.transactionReference }}</span>
                            {% if payment.referenceNumber %}
                                <span class="ext-ref">
                                    <i class="fas fa-hashtag"></i>{{ payment.referenceNumber }}
                                </span>
                            {% endif %}
                        </div>
                        <div class="payment-time">
                            <i class="fas fa-clock"></i>
                            {{ payment.createdAt|date('M d, Y • g:i A') }}
                            {% if hoursAgo > 24 %}
                                <span class="urgent-badge">
                                    <i class="fas fa-exclamation-circle"></i>
                                    {{ hoursAgo }}h ago
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="payment-card-body">
                        <div class="payment-info-grid">
                            <!-- Amount -->
                            <div class="info-item">
                                <span class="label">Amount</span>
                                <span class="amount-display">₱{{ payment.amount|number_format(2, '.', ',') }}</span>
                            </div>

                            <!-- Guest -->
                            <div class="info-item">
                                <span class="label">Guest</span>
                                <div class="guest-info">
                                    <div class="guest-avatar">
                                        {{ guest.firstName|slice(0, 1)|upper }}{{ guest.lastName|slice(0, 1)|upper }}
                                    </div>
                                    <div class="guest-details">
                                        <span class="name">{{ guest.firstName }} {{ guest.lastName }}</span>
                                        <span class="email">{{ guest.email }}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Service Type -->
                            <div class="info-item">
                                <span class="label">Service</span>
                                <span class="service-badge {{ reservation.serviceType|lower }}">
                                    {% if reservation.serviceType == 'ROOM' %}
                                        <i class="fas fa-bed"></i> Room
                                    {% elseif reservation.serviceType == 'TOUR' %}
                                        <i class="fas fa-map-marked-alt"></i> Tour
                                    {% elseif reservation.serviceType == 'PACKAGE' %}
                                        <i class="fas fa-box"></i> Package
                                    {% elseif reservation.serviceType == 'FOOD' %}
                                        <i class="fas fa-utensils"></i> Food
                                    {% else %}
                                        <i class="fas fa-tag"></i> {{ reservation.serviceType }}
                                    {% endif %}
                                </span>
                            </div>

                            <!-- Payment Method -->
                            <div class="info-item">
                                <span class="label">Payment Method</span>
                                <span class="method-badge">
                                    {% if payment.paymentMethod == 'GCASH' %}
                                        <i class="fas fa-mobile-alt"></i>
                                    {% elseif payment.paymentMethod == 'MAYA' %}
                                        <i class="fas fa-wallet"></i>
                                    {% elseif payment.paymentMethod == 'BANK_TRANSFER' %}
                                        <i class="fas fa-university"></i>
                                    {% elseif payment.paymentMethod == 'CREDIT_CARD' %}
                                        <i class="fas fa-credit-card"></i>
                                    {% elseif payment.paymentMethod == 'CASH' %}
                                        <i class="fas fa-money-bill-wave"></i>
                                    {% else %}
                                        <i class="fas fa-money-check"></i>
                                    {% endif %}
                                    {{ payment.paymentMethodLabel }}
                                </span>
                            </div>

                            <!-- Reservation -->
                            <div class="info-item">
                                <span class="label">Reservation</span>
                                <span class="value">{{ reservation.referenceNumber }}</span>
                            </div>

                            <!-- Total -->
                            <div class="info-item">
                                <span class="label">Reservation Total</span>
                                <span class="value">₱{{ reservation.totalAmount|number_format(2, '.', ',') }}</span>
                            </div>
                        </div>

                        <!-- Proof of Payment -->
                        {% if payment.proofOfPayment %}
                        <div class="proof-section">
                            <div class="section-label">
                                <i class="fas fa-receipt"></i> Proof of Payment
                            </div>
                            <img src="{{ asset('uploads/payments/' ~ payment.proofOfPayment) }}" 
                                 alt="Payment Proof" 
                                 class="proof-thumbnail"
                                 onclick="showImagePreview('{{ asset('uploads/payments/' ~ payment.proofOfPayment) }}')">
                            <span class="proof-hint">Click to enlarge</span>
                        </div>
                        {% endif %}

                        <!-- Guest Notes -->
                        {% if payment.guestNotes %}
                        <div class="guest-notes">
                            <div class="notes-label">
                                <i class="fas fa-comment-alt"></i> Guest Notes
                            </div>
                            <p class="notes-text">{{ payment.guestNotes }}</p>
                        </div>
                        {% endif %}
                    </div>

                    <!-- Card Footer -->
                    <div class="payment-card-footer">
                        <div class="reservation-info">
                            {% if reservation.serviceType == 'ROOM' %}
                                <span><i class="fas fa-calendar-alt"></i> {{ reservation.checkIn|date('M d') }} - {{ reservation.checkOut|date('M d, Y') }}</span>
                            {% elseif reservation.serviceType == 'TOUR' %}
                                <span><i class="fas fa-calendar-alt"></i> {{ reservation.tourDate|date('M d, Y') }}</span>
                            {% else %}
                                <span><i class="fas fa-calendar-alt"></i> {{ reservation.createdAt|date('M d, Y') }}</span>
                            {% endif %}
                        </div>
                        
                        <div class="action-buttons">
                            <a href="{{ path('app_payment_show', {id: payment.id}) }}" class="btn-view">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <button type="button" class="btn-approve" 
                                    onclick="showApproveModal({{ payment.id }}, '{{ payment.transactionReference }}', '{{ payment.amount }}')">
                                <i class="fas fa-check"></i> Approve
                            </button>
                            <button type="button" class="btn-reject"
                                    onclick="showRejectModal({{ payment.id }}, '{{ payment.transactionReference }}')">
                                <i class="fas fa-times"></i> Reject
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>All Caught Up!</h3>
            <p>There are no pending payments requiring your approval at this time.</p>
            <a href="{{ path('app_payment_dashboard') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Return to Dashboard
            </a>
        </div>
    {% endif %}
</div>

<!-- APPROVE MODAL -->
<div class="modal-overlay" id="approveModal">
    <div class="modal-content">
        <form id="approveForm" method="post">
            <input type="hidden" name="_token" id="approveToken">
            
            <div class="modal-header approve">
                <div class="modal-icon">
                    <i class="fas fa-check"></i>
                </div>
                <div class="modal-title">
                    <h3>Approve Payment</h3>
                    <p id="approveRefText">Transaction Reference</p>
                </div>
                <button type="button" class="modal-close" onclick="closeModal('approveModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="info-alert success">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        You are about to approve this payment for <strong id="approveAmountText">₱0.00</strong>. 
                        The reservation will be confirmed.
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="approveNotes">Admin Notes (Optional)</label>
                    <textarea name="admin_notes" id="approveNotes" placeholder="Add any notes about this approval..."></textarea>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn-modal-cancel" onclick="closeModal('approveModal')">Cancel</button>
                <button type="submit" class="btn-modal-confirm approve">
                    <i class="fas fa-check"></i> Confirm Approval
                </button>
            </div>
        </form>
    </div>
</div>

<!-- REJECT MODAL -->
