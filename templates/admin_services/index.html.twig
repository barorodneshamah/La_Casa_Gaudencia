            <div class="card-image">
                <img src="/Images/tour-service.jpg" alt="Tour Services">
                <div class="card-image-overlay"></div>
                <span class="card-category-badge">
                    <i class="fas fa-star"></i>
                    Tours & Activities
                </span>
            </div>

            <div class="card-content">
                <div class="card-header">
                    <div class="card-icon-title">
                        <div class="card-icon"><i class="fas fa-map-marked-alt"></i></div>
                        <h3 class="service-title">Tour Services</h3>
                    </div>
                    <p class="service-description">
                        Manage tour, schedules, pricing, and availability.
                        Organize exciting experiences and adventures for your guests.
                    </p>
                </div>

                <div class="card-stats">
                    <div class="stat-item">
                        <div class="stat-number">{{ totalTours }}</div>
                        <div class="stat-label">Total Tours</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">{{ availableTours }}</div>
                        <div class="stat-label">Available</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">{{ bookedTours }}</div>
                        <div class="stat-label">Booked</div>
                    </div>
                </div>

                <div class="card-features">
                    <span class="feature-tag"><i class="fas fa-check"></i> Schedules</span>
                    <span class="feature-tag"><i class="fas fa-check"></i> Locations</span>
                    <span class="feature-tag"><i class="fas fa-check"></i> Slots</span>
                    <span class="feature-tag"><i class="fas fa-check"></i> Duration</span>
                </div>

                <div class="card-actions">
                    <a href="{{ path('app_tour_index') }}" class="service-btn btn-primary">
                        <i class="fas fa-cog"></i>
                        Manage Tours
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
