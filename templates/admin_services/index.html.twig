            </svg>
            Reservations
        </a>
    </li>

</ul>

</div>

<!-- TOPBAR -->
<div class="topbar">
    <div class="topbar-left">Admin Services</div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">
    <h2 class="section-title">Available Services</h2>

    <div class="service-card-grid">
        <!-- ROOM SERVICE CARD -->
        <div class="service-card">
            <div class="service-title">Room Services</div>
            <p>Manage hotel rooms, pricing, availability, features and more.</p>
            <a href="{{ path('app_room_index') }}" class="service-btn">Manage Rooms</a>
        </div>
    </div>
</div>

{% endblock %}
