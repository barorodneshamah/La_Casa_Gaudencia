        <div>
            <h2 class="section-title">
                Available Services
            </h2>
        </div>
    </div>

    {# Rooms Data #}
    {% set roomsList = rooms|default([]) %}
    {% set totalRooms = roomsList|length %}
    {% set availableRooms = roomsList|filter(r => r.status|lower == 'available')|length %}
    {% set occupiedRooms = roomsList|filter(r => r.status|lower == 'occupied')|length %}

    {# Tours Data #}
    {% set toursList = tours|default([]) %}
    {% set totalTours = toursList|length %}
    {% set availableTours = toursList|filter(t => t.status|lower == 'available')|length %}
    {% set bookedTours = toursList|filter(t => t.status|lower == 'booked')|length %}

    <!-- SERVICE CARDS GRID -->
    <div class="service-card-grid">
        <!-- ROOM SERVICE CARD -->
        <div class="service-card">
            <div class="card-image">
                <img src="/Images/room-service.jpg" alt="Room Services">
                <div class="card-image-overlay"></div>
                <span class="card-category-badge">
                    <i class="fas fa-star"></i>
                    Hotel Rooms
