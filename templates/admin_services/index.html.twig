    </li>

    <!-- SERVICES -->
    <li class="active">
        <a href="{{ path('app_admin_services') }}"
           style="text-decoration:none; display:flex; align-items:center; gap:12px;">
            <svg viewBox="0 0 24 24">
                <path d="M4 6h16v2H4V6zm0 4h10v2H4v-2zm0 4h16v2H4v-2zm0 
                4h10v2H4v-2z"/>
            </svg>
            Services
        </a>
    </li>

    <!-- RESERVATIONS -->
    <li>
        <a href="#"
           style="text-decoration:none; display:flex; align-items:center; gap:12px;">
            <svg viewBox="0 0 24 24">
                <path d="M20 6h-2V4h-2v2H8V4H6v2H4a2 2 0 00-2 
                2v12a2 2 0 002 2h16a2 2 0 002-2V8a2 
