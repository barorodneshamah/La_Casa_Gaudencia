                    <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4zm8 0c-.29 0-.62.02-.97.05C17.48 13.23 20 14.5 20 16v3h4v-3c0-2.66-5.33-4-8-4z"/>
                </svg>
                User Management
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_services') }}">
                <svg viewBox="0 0 24 24">
                    <path d="M4 6h16v2H4V6zm0 4h10v2H4v-2zm0 4h16v2H4v-2zm0 4h10v2H4v-2z"/>
                </svg>
                Services
            </a>
        </li>
        <li>
            <a href="#">
                <svg viewBox="0 0 24 24">
                    <path d="M20 6h-2V4h-2v2H8V4H6v2H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V8a2 2 0 00-2-2zm0 14H4V10h16v10z"/>
                </svg>
                Reservations
            </a>
        </li>
        <li>
            <a href="#">
                <svg viewBox="0 0 24 24">
                    <path d="M2 6h20v2H2V6zm0 4h20v8H2v-8zm0 10h20v2H2v-2z"/>
                </svg>
                Payments
            </a>
        </li>
        <li>
            <a href="#">
                <svg viewBox="0 0 24 24">
                    <path d="M3 4v16h18V4H3zm2 2h14v12H5V6z"/>
                </svg>
                Activity Logs
            </a>
        </li>
    </ul>

    <!-- LOGOUT SECTION -->
    <div class="sidebar-logout">
        <a href="{{ path('app_logout') }}" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            Log Out
        </a>
    </div>
</div>

<!-- TOPBAR -->
<div class="topbar">
    <div class="topbar-left">User Management</div>
    <div class="topbar-right">
        <div class="datetime-display">
            <div class="time" id="currentTime">00:00 AM</div>
            <div class="date" id="currentDate">Loading...</div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">

    <!-- FLASH MESSAGES -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message {{ label }}">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }}"></i>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- HEADER -->
    <div class="page-header">
        <h2 class="section-title">
            <i class="fas fa-user"></i>
            User Details
        </h2>
        <div class="header-buttons">
            <a href="{{ path('app_user_index') }}" class="btn-hollow">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-solid">
                <i class="fas fa-edit"></i> Edit User
            </a>
            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button type="submit">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
        </div>
    </div>

    <!-- USER CARD -->
    <div class="user-card">
        <!-- HERO / SUMMARY -->
        <div class="user-hero">
            <div class="user-id">
                <div class="user-avatar">
                    {{ user.username|first|upper }}
                </div>
                <div class="user-meta">
                    <h3>{{ user.fullName ?? user.username }}</h3>
                    <div class="user-username">@{{ user.username }}</div>
                    <div class="badges">
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="role-badge admin">
                                    <i class="fas fa-shield-alt"></i> Admin
                                </span>
                            {% elseif role == 'ROLE_STAFF' %}
                                <span class="role-badge staff">
                                    <i class="fas fa-user-tie"></i> Staff
                                </span>
                            {% elseif role == 'ROLE_USER' or role == 'ROLE_GUEST' %}
                                <span class="role-badge guest">
                                    <i class="fas fa-user"></i> Guest
                                </span>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="user-quick">
                <div class="quick-tile">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <div class="quick-label">Email</div>
                        <div class="quick-value">{{ user.email ?? 'Not set' }}</div>
                    </div>
                </div>
        </div>

        <!-- BODY -->
        <div class="user-body">

            <!-- ACCOUNT INFORMATION -->
            <h3 class="section-heading">
                <i class="fas fa-user-circle"></i>
                Account Information
            </h3>
            <div class="details-grid">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-hashtag"></i> User ID
                    </span>
                    <span class="detail-value">#{{ user.id }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user"></i> Username
                    </span>
                    <span class="detail-value">{{ user.username }}</span>
                </div>
