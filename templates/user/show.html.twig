{# templates/user/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Details | La Casa Gaudencia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
:root {
    --brand-primary: #c24a16;
    --brand-cream: #fcfbf7;
    --brand-black: #000000;
    --brand-text: #2f2f2f;
    --brand-text-muted: #888888;
    --font-heading: 'Playfair Display', serif;
    --font-body: 'Roboto', sans-serif;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: #f7f5edff;
    font-family: 'Roboto', sans-serif;
    color: #2f2f2f;
}

/* ===== ACCENT BAR ===== */
.sidebar-accent {
    position: fixed;
    top: 0;
    left: 0;
    width: 8px;
    height: 100vh;
    background-color: #c24a16;
    border-radius: 0 6px 6px 0;
    box-shadow: 2px 0 8px rgba(0,0,0,0.15);
    z-index: 30;
}

/* ===== SIDEBAR ===== */
.sidebar {
    position: fixed;
    top: 0;
    left: 8px;
    width: 260px;
    height: 100vh;
    background: white;
    box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 28px;
    border-radius: 0 12px 12px 0;
    z-index: 20;
}

/* ===== BRAND ===== */
.brand {
    text-align: center;
    margin-bottom: 30px;
}

.brand img {
    width: 75px;
    height: 75px;
    margin-bottom: 8px;
    filter: drop-shadow(0 3px 6px rgba(0,0,0,0.15));
}

.brand h1 {
    font-family: 'Playfair Display', serif;
    color: #c24a16;
    font-size: 22px;
    letter-spacing: .5px;
    margin: 0;
    font-weight: 600;
}

.brand small {
    color: #777;
    font-size: 12px;
    letter-spacing: .75px;
    font-weight: 500;
}

/* ===== SEPARATOR ===== */
.sidebar-separator {
    width: 75%;
    height: 1.5px;
    background: linear-gradient(to right, transparent, #d1d1d1, transparent);
    margin: 10px 0 15px 0;
}

/* ===== MENU ===== */
.sidebar ul {
    list-style: none;
    width: 100%;
    padding: 0;
}

.sidebar ul li a {
    display: flex;
    gap: 14px;
    align-items: center;
    padding: 14px 35px;
    font-size: 15px;
    font-weight: 500;
    color: #2f2f2f;
    text-decoration: none;
    transition: all .25s ease;
}

.sidebar ul li svg {
    width: 20px;
    height: 20px;
    fill: #888;
    transition: .25s;
}

.sidebar ul li a:hover,
.sidebar ul li.active a {
    background-color: #c24a16;
    color: white;
    margin-left: -12px;
    border-radius: 0 30px 30px 0;
    padding-left: 48px;
    box-shadow: 0 4px 12px rgba(194,74,22,0.25);
}

.sidebar ul li a:hover svg,
.sidebar ul li.active a svg {
    fill: white !important;
}

/* ===== LOGOUT SECTION ===== */
.sidebar-logout {
    width: 100%;
    padding: 20px 30px;
    margin-top: auto;
    display: flex;
    justify-content: center;
    border-top: 1px solid #eee;
}

.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 80%;
    padding: 14px 24px;
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(194, 74, 22, 0.3);
    border: none;
    cursor: pointer;
}

.logout-btn:hover {
    background: linear-gradient(135deg, #a53f13 0%, #c24a16 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(194, 74, 22, 0.4);
}

.logout-btn i {
    font-size: 16px;
}

/* ===== TOPBAR ===== */
.topbar {
    margin-left: 268px;
    background: #c24a16;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 35px;
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 3px 10px rgba(0,0,0,0.15);
}

.topbar-left {
    font-family: 'Playfair Display', serif;
    font-size: 24px;
    font-weight: 600;
    letter-spacing: .7px;
}

.topbar-right {
    display: flex;
    align-items: center;
}

.datetime-display {
    text-align: right;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8px;
}

.datetime-display .time {
    font-size: 14px;
    font-weight: 600;
    color: #ffffff;
}

.datetime-display .date {
    font-size: 10px;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 1px;
}

/* ===== MAIN CONTENT ===== */
.main-content { 
    margin-left: 268px; 
    padding: 32px; 
    min-height: calc(100vh - 70px); 
}

/* Page header */
.page-header { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    margin-bottom: 28px; 
    gap: 16px; 
    flex-wrap: wrap;
}

.page-header .section-title { 
    margin: 0; 
    font-family: var(--font-heading); 
    font-size: 26px; 
    color: var(--brand-primary); 
    font-weight: 600; 
    display: flex; 
    gap: 12px; 
    align-items: center; 
}

.section-title i { 
    font-size: 22px; 
    opacity: .9; 
}

/* Section Headings */
.section-heading {
    font-family: var(--font-heading);
    font-size: 20px;
    color: #c24a16;
    font-weight: 700;
    margin: 30px 0 18px 0;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(194, 74, 22, 0.2);
    display: flex;
    align-items: center;
    gap: 10px;
}

.section-heading i {
    color: #c24a16;
    font-size: 22px;
}

/* Header actions */
.header-buttons { 
    display: flex; 
    gap: 10px; 
    flex-wrap: wrap; 
}

.btn-hollow, .btn-solid {
    display: inline-flex; 
    align-items: center; 
    gap: 8px;
    padding: 10px 16px; 
    border-radius: 10px; 
    font-size: 14px;
    text-decoration: none; 
    cursor: pointer; 
    transition: .25s ease;
    border: 2px solid transparent;
    font-weight: 600;
}

.btn-hollow { 
    color: #c24a16; 
    border-color: #c24a16; 
    background: #fff; 
}

.btn-hollow:hover { 
    background: #c24a16; 
    color: #fff; 
}

.btn-solid { 
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%); 
    color: #fff; 
    box-shadow: 0 6px 16px rgba(194,74,22,.25); 
}

.btn-solid:hover { 
    transform: translateY(-2px); 
}

.header-buttons form button {
    display: inline-flex; 
    align-items: center; 
    gap: 8px;
    padding: 10px 16px; 
    border-radius: 10px; 
    font-size: 14px;
    border: 0; 
    cursor: pointer; 
    color: #fff;
    font-weight: 600;
    background: linear-gradient(135deg, #c62828 0%, #ef5350 100%);
    box-shadow: 0 6px 16px rgba(198,40,40,.25);
}

.header-buttons form button:hover { 
    transform: translateY(-2px); 
}

/* Card wrapper */
.user-card { 
    background: #fff; 
    border-radius: 16px; 
    box-shadow: 0 8px 24px rgba(0,0,0,.08); 
    border: 1px solid rgba(0,0,0,.05); 
    overflow: hidden; 
}

/* Top summary strip */
.user-hero { 
    display: flex; 
    justify-content: space-between; 
    gap: 18px; 
    padding: 24px 26px; 
    background: linear-gradient(135deg, #faf8f4 0%, #fff 100%); 
    border-bottom: 1px solid #eee; 
    flex-wrap: wrap;
}

.user-id { 
    display: flex; 
    align-items: center; 
    gap: 18px; 
}

.user-avatar { 
    width: 70px; 
    height: 70px; 
    border-radius: 50%; 
    background: linear-gradient(135deg, #c24a16 0%, #e85d04 100%); 
    color: #fff; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    font-size: 28px; 
    font-weight: 800; 
    box-shadow: 0 6px 16px rgba(194,74,22,.3);
    text-transform: uppercase;
}

.user-meta h3 { 
    margin: 0; 
    font-size: 22px; 
    color: #2f2f2f; 
    font-weight: 800; 
    font-family: var(--font-heading);
}

.user-meta .user-username {
    color: var(--brand-text-muted);
    font-size: 14px;
    margin-top: 4px;
}

/* Badges */
.badges { 
    display: flex; 
    gap: 10px; 
    margin-top: 10px; 
    flex-wrap: wrap; 
}

.role-badge { 
    padding: 6px 14px; 
    border-radius: 20px; 
    font-size: 12px; 
    font-weight: 700; 
    text-transform: uppercase; 
    letter-spacing: .5px; 
    display: inline-flex; 
    align-items: center; 
    gap: 6px; 
    border: 1px solid transparent; 
}

.role-badge.admin { 
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%); 
    color: #c62828; 
    border-color: #ef9a9a; 
}

.role-badge.staff { 
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%); 
    color: #ef6c00; 
    border-color: #ffcc80; 
}

.role-badge.guest { 
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%); 
    color: #2e7d32; 
    border-color: #a5d6a7; 
}

.role-badge.user { 
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%); 
    color: #1565c0; 
    border-color: #90caf9; 
}

/* Quick tiles */
.user-quick { 
    display: flex; 
    gap: 14px; 
    flex-wrap: wrap; 
    align-items: center; 
}

.quick-tile { 
    background: #fff; 
    border: 1px solid #eee; 
    border-radius: 12px; 
    padding: 12px 16px; 
    min-width: 180px; 
    display: flex; 
    align-items: center; 
    gap: 12px; 
    box-shadow: 0 4px 12px rgba(0,0,0,.04); 
}

.quick-tile i { 
    color: #c24a16; 
    font-size: 20px;
}

.quick-label { 
    font-size: 11px; 
    color: #888; 
    text-transform: uppercase; 
    letter-spacing: .5px; 
}

.quick-value { 
    font-size: 14px; 
    font-weight: 700; 
    color: #2f2f2f; 
}

/* Content body */
.user-body { 
    padding: 26px; 
}

/* Details grid */
.details-grid { 
    display: grid; 
    grid-template-columns: repeat(2, minmax(260px, 1fr)); 
    gap: 14px; 
}

.detail-item { 
    background: #fff; 
    border: 1px solid #eee; 
    border-radius: 12px; 
    padding: 16px 18px; 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
}

.detail-label { 
    color: #c24a16; 
    font-size: 12px; 
    text-transform: uppercase; 
    letter-spacing: .6px; 
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
}

.detail-label i {
    font-size: 14px;
}

.detail-value { 
    color: #2f2f2f; 
    font-weight: 700; 
}

/* Roles Section */
.roles-section {
    margin-top: 10px;
}

.roles-grid {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
}

.role-card {
    background: #fff;
    border: 2px solid #eee;
    border-radius: 16px;
    padding: 24px 32px;
    text-align: center;
    min-width: 160px;
    transition: all 0.25s ease;
}

.role-card.active {
    border-color: var(--brand-primary);
    background: rgba(194, 74, 22, 0.03);
    box-shadow: 0 4px 16px rgba(194, 74, 22, 0.15);
}

.role-card .role-icon {
    width: 60px;
    height: 60px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26px;
    margin: 0 auto 14px;
}

.role-card.admin .role-icon {
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
    color: #c62828;
}

.role-card.staff .role-icon {
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
    color: #ef6c00;
}

.role-card.guest .role-icon {
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    color: #2e7d32;
}

.role-card .role-title {
    font-weight: 700;
    font-size: 16px;
    color: var(--brand-text);
    margin-bottom: 4px;
}

.role-card .role-status {
    font-size: 12px;
    color: var(--brand-text-muted);
}

.role-card.active .role-status {
    color: var(--brand-primary);
    font-weight: 600;
}

/* Activity Section */
.activity-section {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 20px 22px;
    margin-top: 10px;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 12px 0;
    border-bottom: 1px solid #f5f5f5;
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(194, 74, 22, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--brand-primary);
}

.activity-info {
    flex: 1;
}

.activity-title {
    font-weight: 600;
    font-size: 14px;
    color: var(--brand-text);
}

.activity-time {
    font-size: 12px;
    color: var(--brand-text-muted);
    margin-top: 2px;
}

/* Timestamps */
.timestamps {
    display: flex;
    gap: 20px;
    margin-top: 24px;
    padding-top: 18px;
    border-top: 1px solid #eee;
    flex-wrap: wrap;
}

.timestamp-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #888;
}

.timestamp-item i {
    color: #c24a16;
}

/* Flash messages */
.flash-message {
    padding: 14px 20px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
    font-size: 14px;
}

.flash-message.success {
    background: #e8f5e9;
    border: 1px solid #a5d6a7;
    color: #2e7d32;
}

.flash-message.error {
    background: #ffebee;
    border: 1px solid #ef9a9a;
    color: #c62828;
}

/* Responsive */
@media (max-width: 1024px) {
    .sidebar {
        width: 220px;
    }
    .main-content,
    .topbar {
        margin-left: 228px;
    }
}

@media (max-width: 900px) {
    .details-grid { 
        grid-template-columns: 1fr; 
    }
    .user-hero { 
        flex-direction: column; 
        align-items: flex-start; 
    }
    .user-quick {
        width: 100%;
    }
    .quick-tile {
        flex: 1;
        min-width: 140px;
    }
}

@media (max-width: 768px) {
    .sidebar,
    .sidebar-accent {
        display: none;
    }
    .main-content,
    .topbar {
        margin-left: 0;
    }
    .page-header {
        flex-direction: column;
        align-items: flex-start;
    }
    .header-buttons {
        width: 100%;
    }
    .roles-grid {
        flex-direction: column;
    }
    .role-card {
        width: 100%;
    }
}
</style>
{% endblock %}

{% block body %}

<!-- ACCENT BAR -->
