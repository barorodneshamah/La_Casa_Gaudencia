<script>
document.addEventListener("DOMContentLoaded", function () {
  const signinModal = document.getElementById("signinModal");
  const signupModal = document.getElementById("signupModal");
  const openSignin = document.querySelectorAll(".open-signin");
  const openSignup = document.querySelectorAll(".open-signup");
  const closeButtons = document.querySelectorAll(".modal-close");

  // Open Sign In
  openSignin.forEach(btn => btn.addEventListener("click", (e) => {
    e.preventDefault();
    signupModal.classList.remove("show");
    signinModal.classList.add("show");
  }));

  // Open Sign Up
  openSignup.forEach(btn => btn.addEventListener("click", (e) => {
    e.preventDefault();
    signinModal.classList.remove("show");
    signupModal.classList.add("show");
  }));

  // Close Modals
  closeButtons.forEach(btn => btn.addEventListener("click", () => {
    signinModal.classList.remove("show");
    signupModal.classList.remove("show");
  }));

  // Close on outside click
  window.addEventListener("click", (e) => {
    if (e.target === signinModal || e.target === signupModal) {
      signinModal.classList.remove("show");
      signupModal.classList.remove("show");
    }
  });
});
</script>

