    text-align: center; 
}
.experiences h2 { 
    font-size: 34px; 
    margin-bottom: 40px; 
}
.review-feed { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
    gap: 25px; 
}
.review-card { 
    background: #fff; 
    border-radius: 14px; 
    box-shadow: 0 6px 15px rgba(0,0,0,0.08);
    overflow: hidden; 
    display: flex; 
    flex-direction: column; 
    text-align: left; 
    transition: 0.3s; 
}
.review-card:hover { 
    transform: translateY(-5px); 
}
.review-image { 
    width: 100%; 
    height: 200px; 
    object-fit: cover; 
}
.review-content { 
    padding: 20px; 
    flex-grow: 1; 
}
.review-text { 
