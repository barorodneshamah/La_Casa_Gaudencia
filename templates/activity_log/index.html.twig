    <div class="topbar-left">Activity Logs Management</div>
    <div class="topbar-right">
        <div class="datetime-display">
            <div class="time" id="currentTime">00:00 AM</div>
            <div class="date" id="currentDate">Loading...</div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">

    <!-- PAGE HEADER -->
    <div class="page-header">
        <h2 class="section-title">
            Overview
        </h2>
        <div class="header-buttons">
            <a href="{{ path('app_admin_dashboard') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Back to Dashboard
            </a>
            <a href="{{ path('app_activity_log_export', app.request.query.all) }}" class="btn-export">
                <i class="fas fa-download"></i>
                Export CSV
            </a>
        </div>
    </div>

    <!-- STATS ROW -->
    <div class="stats-row">
        <div class="stat-card total">
            <div class="stat-icon"><i class="fas fa-list-alt"></i></div>
            <div class="stat-number">{{ total }}</div>
            <div class="stat-label">Total Logs</div>
        </div>
        {% for stat in actionStats %}
            <div class="stat-card {{ stat.action|lower }}">
                <div class="stat-icon">
                    {% if stat.action == 'LOGIN' %}
                        <i class="fas fa-sign-in-alt"></i>
                    {% elseif stat.action == 'LOGOUT' %}
                        <i class="fas fa-sign-out-alt"></i>
                    {% elseif stat.action == 'CREATE' %}
                        <i class="fas fa-plus-circle"></i>
                    {% elseif stat.action == 'UPDATE' %}
                        <i class="fas fa-edit"></i>
                    {% elseif stat.action == 'DELETE' %}
                        <i class="fas fa-trash-alt"></i>
                    {% else %}
                        <i class="fas fa-circle"></i>
                    {% endif %}
                </div>
                <div class="stat-number">{{ stat.count }}</div>
                <div class="stat-label">{{ stat.action }}</div>
            </div>
        {% endfor %}
    </div>

    <!-- FILTER CARD -->
    <div class="filter-card">
        <div class="filter-card-header">
            <i class="fas fa-filter"></i>
            <h3>Filter Logs</h3>
        </div>
        <div class="filter-card-body">
            {{ form_start(form, {'attr': {'class': 'filter-form'}}) }}
            <div class="filter-row">
                <div class="filter-group">
                    {{ form_label(form.action) }}
                    {{ form_widget(form.action) }}
                </div>
                <div class="filter-group">
                    {{ form_label(form.entityType) }}
                    {{ form_widget(form.entityType) }}
                </div>
                <div class="filter-group">
                    {{ form_label(form.user) }}
                    {{ form_widget(form.user) }}
                </div>
                <div class="filter-group">
                    {{ form_label(form.dateFrom) }}
                    {{ form_widget(form.dateFrom) }}
                </div>
                <div class="filter-group">
                    {{ form_label(form.dateTo) }}
                    {{ form_widget(form.dateTo) }}
                </div>
                <div class="filter-group">
                    {{ form_label(form.search) }}
                    {{ form_widget(form.search) }}
                </div>
            </div>
            <div class="filter-buttons">
                <button type="submit" class="btn-filter">
                    <i class="fas fa-search"></i> Apply Filters
                </button>
                <a href="{{ path('app_activity_log_index') }}" class="btn-clear">
                    <i class="fas fa-times"></i> Clear All
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- TABLE CONTAINER -->
    <div class="table-container">
        <div class="table-header-info">
            <div class="info-left">
                <div class="info-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="info-text">
                    <h3>All Activity Logs</h3>
                    <p>Track all system activities and user actions</p>
                </div>
            </div>
        </div>

        <div class="datatable-wrapper">
            {% if logs|length > 0 %}
            <table id="activityTable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>User</th>
                        <th>Role</th>
                        <th>Action</th>
                        <th>Entity</th>
                        <th>Description</th>
                        <th>IP Address</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <!-- DATE/TIME -->
                        <td>
                            <div class="datetime-cell">
                                <div class="date">{{ log.createdAt|date('M d, Y') }}</div>
                                <div class="time">{{ log.createdAt|date('h:i:s A') }}</div>
                            </div>
                        </td>

                        <!-- USER -->
                        <td>
                            <div class="user-cell">
                                <div class="user-avatar-small">
                                    {{ (log.username|default('NA'))|slice(0, 2) }}
                                </div>
                                <span class="user-name">{{ log.username ?? 'N/A' }}</span>
                            </div>
                        </td>

                        <!-- ROLE -->
                        <td>
                            {% set roleClass = log.userRole|lower %}
                            <span class="role-badge {{ roleClass }}">
                                {{ log.userRole }}
                            </span>
                        </td>

                        <!-- ACTION -->
                        <td>
                            {% set actionClass = log.action|lower %}
                            <span class="action-badge {{ actionClass }}">
                                {% if log.action == 'LOGIN' %}
                                    <i class="fas fa-sign-in-alt"></i>
                                {% elseif log.action == 'LOGOUT' %}
                                    <i class="fas fa-sign-out-alt"></i>
                                {% elseif log.action == 'CREATE' %}
                                    <i class="fas fa-plus"></i>
                                {% elseif log.action == 'UPDATE' %}
                                    <i class="fas fa-edit"></i>
                                {% elseif log.action == 'DELETE' %}
                                    <i class="fas fa-trash"></i>
                                {% endif %}
                                {{ log.action }}
                            </span>
                        </td>

                        <!-- ENTITY -->
                        <td>
                            {% if log.entityType %}
                                <div class="entity-cell">
                                    <div class="entity-type">{{ log.entityType }}</div>
                                    {% if log.entityId %}
                                        <div class="entity-id">#{{ log.entityId }}</div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <span style="color: #999;">-</span>
                            {% endif %}
                        </td>

                        <!-- DESCRIPTION -->
                        <td>
                            <div class="description-cell" title="{{ log.description }}">
                                {{ log.description|default('-')|slice(0, 40) }}{% if log.description|length > 40 %}...{% endif %}
                            </div>
                        </td>

                        <!-- IP ADDRESS -->
                        <td>
                            {% if log.ipAddress %}
                                <span class="ip-cell">{{ log.ipAddress }}</span>
                            {% else %}
                                <span style="color: #999;">N/A</span>
                            {% endif %}
                        </td>

                        <!-- ACTIONS -->
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_activity_log_show', {id: log.id}) }}" 
                                   class="btn-action btn-view" 
                                   data-tooltip="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
            <div class="empty-state">
                <i class="fas fa-clipboard-list"></i>
                <h4>No Activity Logs Found</h4>
                <p>There are no activity logs matching your criteria.</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}

