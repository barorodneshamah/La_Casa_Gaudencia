                    <path d="M13 3a9 9 0 0 0-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42A8.954 8.954 0 0 0 13 21a9 9 0 0 0 0-18zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"/>
                </svg>
                Activity Logs
            </a>
        </li>
    </ul>

    <!-- LOGOUT SECTION -->
    <div class="sidebar-logout">
        <a href="{{ path('app_logout') }}" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            Log Out
        </a>
    </div>
</div>

<!-- TOPBAR -->
<div class="topbar">
    <div class="topbar-left">Activity Log Details</div>
    <div class="topbar-right">
        <div class="datetime-display">
            <div class="time" id="currentTime">00:00 AM</div>
            <div class="date" id="currentDate">Loading...</div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main-content">

    <!-- FLASH MESSAGES -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message {{ label }}">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }}"></i>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- HEADER -->
    <div class="page-header">
        <h2 class="section-title">
            <i class="fas fa-clipboard-list"></i>
            Activity Log #{{ log.id }}
        </h2>
        <div class="header-buttons">
            <a href="{{ path('app_activity_log_index') }}" class="btn-hollow">
                <i class="fas fa-arrow-left"></i> Back to Logs
            </a>
            <a href="{{ path('app_activity_log_export', app.request.query.all) }}" class="btn-solid btn-export">
                <i class="fas fa-download"></i> Export Logs
            </a>
        </div>
    </div>

    <!-- LOG CARD -->
    <div class="log-card">
        <!-- HERO / SUMMARY -->
        <div class="log-hero">
            <div class="log-id">
                <div class="log-avatar {{ log.action|lower }}">
                    {% if log.action == 'LOGIN' %}
                        <i class="fas fa-sign-in-alt"></i>
                    {% elseif log.action == 'LOGOUT' %}
                        <i class="fas fa-sign-out-alt"></i>
                    {% elseif log.action == 'CREATE' %}
                        <i class="fas fa-plus"></i>
                    {% elseif log.action == 'UPDATE' %}
                        <i class="fas fa-edit"></i>
                    {% elseif log.action == 'DELETE' %}
                        <i class="fas fa-trash"></i>
                    {% else %}
                        <i class="fas fa-circle"></i>
                    {% endif %}
                </div>
                <div class="log-meta">
                    <h3>{{ log.action }} Action</h3>
                    <div class="log-subtitle">
                        Performed by {{ log.username ?? 'Unknown User' }}
                    </div>
                    <div class="badges">
                        <span class="action-badge {{ log.action|lower }}">
                            {% if log.action == 'LOGIN' %}
                                <i class="fas fa-sign-in-alt"></i>
                            {% elseif log.action == 'LOGOUT' %}
                                <i class="fas fa-sign-out-alt"></i>
                            {% elseif log.action == 'CREATE' %}
                                <i class="fas fa-plus"></i>
                            {% elseif log.action == 'UPDATE' %}
                                <i class="fas fa-edit"></i>
                            {% elseif log.action == 'DELETE' %}
                                <i class="fas fa-trash"></i>
                            {% endif %}
                            {{ log.action }}
                        </span>
                        {% set roleClass = log.userRole|lower %}
                        <span class="role-badge {{ roleClass }}">
                            {% if log.userRole == 'ADMIN' %}
                                <i class="fas fa-shield-alt"></i>
                            {% elseif log.userRole == 'STAFF' %}
                                <i class="fas fa-user-tie"></i>
                            {% else %}
                                <i class="fas fa-user"></i>
                            {% endif %}
                            {{ log.userRole }}
                        </span>
                    </div>
                </div>
            </div>

            <div class="log-quick">
                <div class="quick-tile">
                    <i class="fas fa-calendar-alt"></i>
                    <div>
                        <div class="quick-label">Date</div>
                        <div class="quick-value">{{ log.createdAt|date('M d, Y') }}</div>
                    </div>
                </div>
                <div class="quick-tile">
                    <i class="fas fa-clock"></i>
                    <div>
                        <div class="quick-label">Time</div>
                        <div class="quick-value">{{ log.createdAt|date('h:i:s A') }}</div>
                    </div>
                </div>
                <div class="quick-tile">
                    <i class="fas fa-globe"></i>
                    <div>
                        <div class="quick-label">IP Address</div>
                        <div class="quick-value">{{ log.ipAddress ?? 'N/A' }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- BODY -->
        <div class="log-body">

            <!-- LOG INFORMATION -->
            <h3 class="section-heading">
                <i class="fas fa-info-circle"></i>
                Log Information
            </h3>
            <div class="details-grid">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-hashtag"></i> Log ID
                    </span>
                    <span class="detail-value">#{{ log.id }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-bolt"></i> Action Type
                    </span>
                    <span class="detail-value">{{ log.action }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user"></i> Username
                    </span>
                    <span class="detail-value">{{ log.username ?? 'N/A' }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user-tag"></i> User Role
                    </span>
                    <span class="detail-value">{{ log.userRole }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-calendar"></i> Date & Time
                    </span>
                    <span class="detail-value">{{ log.createdAt|date('F j, Y \\a\\t g:i:s A') }}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-network-wired"></i> IP Address
                    </span>
                    <span class="detail-value">
                        {% if log.ipAddress %}
                            <span class="ip-badge">{{ log.ipAddress }}</span>
                        {% else %}
                            <span class="no-data">Not available</span>
                        {% endif %}
                    </span>
                </div>
            </div>

            <!-- AFFECTED ENTITY -->
            {% if log.entityType %}
            <h3 class="section-heading">
                <i class="fas fa-cube"></i>
                Affected Entity
            </h3>
            <div class="entity-card">
                <div class="entity-icon">
                    {% if log.entityType == 'User' %}
                        <i class="fas fa-user"></i>
                    {% elseif log.entityType == 'Hotel' %}
                        <i class="fas fa-hotel"></i>
                    {% elseif log.entityType == 'Tour' %}
                        <i class="fas fa-map-marked-alt"></i>
                    {% elseif log.entityType == 'Package' %}
                        <i class="fas fa-box"></i>
                    {% elseif log.entityType == 'Dining' %}
                        <i class="fas fa-utensils"></i>
                    {% elseif log.entityType == 'Booking' %}
                        <i class="fas fa-calendar-check"></i>
                    {% elseif log.entityType == 'Room' %}
                        <i class="fas fa-bed"></i>
                    {% else %}
                        <i class="fas fa-database"></i>
                    {% endif %}
                </div>
                <div class="entity-info">
                    <div class="entity-type">{{ log.entityType }}</div>
                    <div class="entity-name">{{ log.entityName ?? 'Unknown' }}</div>
                    {% if log.entityId %}
                        <div class="entity-id">ID: #{{ log.entityId }}</div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- DESCRIPTION -->
            <h3 class="section-heading">
                <i class="fas fa-align-left"></i>
                Description
            </h3>
            <div class="description-section">
                {% if log.description %}
                    <p class="description-text">{{ log.description }}</p>
                {% else %}
                    <p class="no-data">No description available for this activity.</p>
                {% endif %}
            </div>

            <!-- DATA CHANGES -->
            {% if log.oldData or log.newData %}
            <h3 class="section-heading">
                <i class="fas fa-exchange-alt"></i>
                Data Changes
            </h3>
            <div class="data-comparison">
                {% if log.oldData %}
                <div class="data-card">
                    <div class="data-card-header old-data">
                        <i class="fas fa-minus-circle"></i>
                        Previous Data
                    </div>
                    <div class="data-card-body">
                        <pre>{{ log.oldData|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</pre>
                    </div>
                </div>
                {% endif %}

                {% if log.newData %}
                <div class="data-card">
                    <div class="data-card-header new-data">
                        <i class="fas fa-plus-circle"></i>
                        New Data
                    </div>
                    <div class="data-card-body">
                        <pre>{{ log.newData|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</pre>
                    </div>
                </div>
                {% endif %}
            </div>
            {% endif %}

            <!-- TECHNICAL DETAILS -->
            {% if log.userAgent %}
            <h3 class="section-heading">
                <i class="fas fa-laptop-code"></i>
                Technical Details
            </h3>
            <div class="user-agent-section">
                <strong style="font-size: 12px; color: #666; display: block; margin-bottom: 8px;">
                    <i class="fas fa-globe"></i> User Agent:
                </strong>
                <p class="user-agent-text">{{ log.userAgent }}</p>
            </div>
            {% endif %}

            <!-- ACTIVITY TIMELINE -->
            <h3 class="section-heading">
                <i class="fas fa-stream"></i>
                Activity Summary
            </h3>
            <div class="activity-section">
                <div class="activity-item">
                    <div class="activity-icon {{ log.action|lower }}">
                        {% if log.action == 'LOGIN' %}
                            <i class="fas fa-sign-in-alt"></i>
                        {% elseif log.action == 'LOGOUT' %}
                            <i class="fas fa-sign-out-alt"></i>
                        {% elseif log.action == 'CREATE' %}
                            <i class="fas fa-plus"></i>
                        {% elseif log.action == 'UPDATE' %}
                            <i class="fas fa-edit"></i>
                        {% elseif log.action == 'DELETE' %}
                            <i class="fas fa-trash"></i>
                        {% else %}
                            <i class="fas fa-circle"></i>
                        {% endif %}
                    </div>
                    <div class="activity-info">
                        <div class="activity-title">
                            {% if log.action == 'LOGIN' %}
                                User logged into the system
                            {% elseif log.action == 'LOGOUT' %}
                                User logged out of the system
                            {% elseif log.action == 'CREATE' %}
                                Created new {{ log.entityType|lower }}{% if log.entityName %}: {{ log.entityName }}{% endif %}
                            {% elseif log.action == 'UPDATE' %}
                                Updated {{ log.entityType|lower }}{% if log.entityName %}: {{ log.entityName }}{% endif %}
                            {% elseif log.action == 'DELETE' %}
                                Deleted {{ log.entityType|lower }}{% if log.entityName %}: {{ log.entityName }}{% endif %}
                            {% else %}
                                {{ log.action }} action performed
                            {% endif %}
                        </div>
                        <div class="activity-time">
                            {{ log.createdAt|date('F j, Y \\a\\t g:i:s A') }}
                        </div>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="activity-info">
                        <div class="activity-title">Performed by: {{ log.username ?? 'Unknown User' }}</div>
                        <div class="activity-time">Role: {{ log.userRole }}</div>
                    </div>
                </div>
                {% if log.ipAddress %}
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="activity-info">
                        <div class="activity-title">Originated from IP: {{ log.ipAddress }}</div>
                        <div class="activity-time">Network location tracked</div>
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- TIMESTAMPS -->
            <div class="timestamps">
                <div class="timestamp-item">
                    <i class="fas fa-clock"></i>
                    <span>Logged: {{ log.createdAt|date('M j, Y \\a\\t g:i:s A') }}</span>
                </div>
                <div class="timestamp-item">
                    <i class="fas fa-hashtag"></i>
                    <span>Log ID: #{{ log.id }}</span>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Date/time
    function updateDateTime() {
        const now = new Date();
        const timeEl = document.getElementById('currentTime');
        const dateEl = document.getElementById('currentDate');
        if (timeEl && dateEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit', 
                hour12: true 
            });
            dateEl.textContent = now.toLocaleDateString('en-US', { 
                weekday: 'short', 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
        }
    }
    updateDateTime();
    setInterval(updateDateTime, 1000);
});
</script>
{% endblock %}